@{
    Layout = null;    
}

<div class="row-fluid">
    <div class="span12">
        <div class="page-header">
            <h3>消息</h3>
        </div>

        <div class="alert alert-block alert-info fade in">
            <button type="button" class="close" data-dismiss="alert">×</button>
            <h4 class="alert-heading">@ViewBag.Title</h4>
            <p>
                @ViewBag.Message
            </p>
        </div>
    </div>
</div>
