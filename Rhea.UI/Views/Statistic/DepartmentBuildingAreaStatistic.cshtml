@{
    ViewBag.Title = "学院楼宇用房统计";
    Layout = null;
}

@Html.Action("Heading", new { controller = "Common", area = "", title = ViewBag.Title, active = "房产统计" })

<div class="row-fluid">
    <div class="span12">

        <div class="box chart gradient">
            <div class="title">
                <h4>
                    <span class="icon16 icomoon-icon-bars"></span><span>使用面积图</span>
                </h4>
                <a href="#" class="minimize">Minimize</a>
            </div>

            <div class="content">
                <div class="row-fluid">
                    <div class="span12">
                        <form class="form-inline">
                            <label for="department-list">选择：</label>
                            <select id="department-list"></select>
                        </form>
                    </div>
                </div>
                <div class="row-fluid">
                    <div class="span12">
                        <div id="container-department-building-pie" style="width: 99%; height:400px;">
                        </div>
                    </div>
                </div>
                <div class="row-fluid">
                    <div class="span12">
                        <div id="container-department-building-column" style="width: 99%; height:400px;">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    $(function () {
        var dataList;
        var colors = Highcharts.getOptions().colors;

        $.getJSON('/Statistic/DepartmentBuildingAreaStatisticData', { type: 1 }, function (response) {
            dataList = response;
            initSelectList(response);
        });

        setBoxAction();

        function initSelectList(data) {
            $.each(data, function (i, item) {
                $('#department-list').append("<option value='" + item.DepartmentId + "'>" + item.DepartmentName + "</option>");
            });

            setPieChart(data[0].BuildingArea);
            setColumnChart(data[0].BuildingArea);
        }

        $('#department-list').change(function () {
            var id = $(this).val();
            for (var i = 0; i < dataList.length; i++) {
                if (dataList[i].DepartmentId == id) {
                    setPieChart(dataList[i].BuildingArea);
                    setColumnChart(dataList[i].BuildingArea);
                    break;
                }
            }
        });

        function setPieChart(data) {
            var option = {
                chart: {
                    renderTo: 'container-department-building-pie',
                    plotBackgroundColor: null,
                    plotBorderWidth: null,
                    plotShadow: false
                },
                credits: {
                    enabled: false
                },
                title: {
                    text: '学院分楼宇比例图'
                },
                tooltip: {
                    pointFormat: '{series.name}: <b>{point.percentage:.2f}%</b>',
                    percentageDecimals: 2
                },
                plotOptions: {
                    pie: {
                        allowPointSelect: true,
                        cursor: 'pointer',
                        dataLabels: {
                            enabled: true,
                            color: '#000000',
                            connectorColor: '#000000',
                            formatter: function () {
                                return '<b>' + this.point.name + '</b>: ' + this.percentage.toFixed(2) + ' %';
                            }
                        }
                    }
                },
                series: [{
                    type: 'pie',
                    name: '比例',
                    data: []
                }]
            };

            $.each(data, function (i, item) {
                option.series[0].data.push([item.BuildingName, parseFloat(item.UsableArea)]);
            });

            var chart1 = new Highcharts.Chart(option);
        }

        function setColumnChart(data) {
            var option = {
                chart: {
                    renderTo: 'container-department-building-column',
                    type: 'column'
                },
                credits: {
                    enabled: false
                },
                title: {
                    text: '学院分楼宇柱状图'
                },
                xAxis: {
                    categories: []
                },
                yAxis: {
                    min: 0,
                    title: {
                        text: '面积 (m2)'
                    }
                },
                tooltip: {
                    formatter: function () {
                        return this.y + ' m<sup>2</sup>';
                    }
                },
                plotOptions: {
                    column: {
                        pointPadding: 0.2,
                        borderWidth: 0
                    }
                },
                series: [{
                    name: "面积",
                    color: colors[5],
                    data: []
                }]
            };

            $.each(data, function (i, item) {
                option.series[0].data.push([item.BuildingName, parseFloat(item.UsableArea)]);
                option.xAxis.categories.push(item.BuildingName);
            });

            var chart2 = new Highcharts.Chart(option);
        }
    });
</script>