@model IEnumerable<Rhea.Model.Personnel.Department>
@{
    ViewBag.Title = "部门筛选";
    Layout = null;
}

<style type="text/css">
    ul#check-list { list-style-type: none; padding:0; margin: 5px 0 5px 10px; }
    ul#check-list li { margin-bottom: 5px; float:left; width:180px; }
</style>

<div class="box">
    <div class="box-header well" data-original-title>
        <h2>
            <i class="icon-eye-open"></i>@ViewBag.Title</h2>
    </div>
    <div class="box-content">       
        <div class="row-fluid">
            <div class="span12">
                <ul id="check-list">
                @foreach (var item in Model)
                {
                    <li>
                    <label class="checkbox">
                        <input class="college" type="checkbox" checked="checked" value="@item.Id" />@item.Name
                    </label>
                    </li>
                }
                </ul>                
            </div>            
        </div> 
        <div class="row-fluid">
            <div class="span12">
                <p>
                    <button class="btn btn-info" id="select-all">
                        全选</button>
                    <button class="btn btn-info" id="select-none">
                        取消</button>              
                    <button class="btn btn-success" id="compare">
                        <i class="icon-refresh"></i>
                        比 较</button>
                </p>
            </div>
        </div>      
    </div>
</div>

<script type="text/javascript">
    $(function () {
        $('button#select-all').click(function () {
            $('#check-list input:checkbox').prop('checked', true);
            return false;
        });

        $('button#select-none').click(function () {
            $('#check-list input:checkbox').prop('checked', false);
            return false;
        });
    });
</script>