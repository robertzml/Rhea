    <div class="contentwrapper">

        <div id="content1-layer"></div>
        <div id="content1-loader"></div>
        <div id="ajax-content1">
            @Html.Action("Heading", new { controller = "Common", area = "", title = ViewBag.Title, active = "个人主页" })

            <div class="row-fluid">
                <div class="span8">
                    @Html.Action("List", new { controller = "BuildingGroup", area = "Estate" })
