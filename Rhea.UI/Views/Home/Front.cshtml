@model Rhea.UI.Models.FrontPluginModel

@{
    Layout = null;
    ViewBag.Title = "房产插件";    
}

<!DOCTYPE html>
<html lang="zh">
    <head>
        <meta charset="utf-8">
        <title>房产管理系统 - @ViewBag.Title</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
        <meta content="width=device-width, initial-scale=1.0" name="viewport">
        @Styles.Render("~/Content/bootstrap")
        <!-- Plugins stylesheets -->
        <link href="@Url.Content("~/Content/icons.css")" rel="stylesheet" type="text/css" />
        <link href="@Url.Content("~/Plugins/tables/dataTables/jquery.dataTables.css")" type="text/css" rel="stylesheet" />

        <!-- Main stylesheets -->
        <link href="@Url.Content("~/Content/main.css")" rel="stylesheet" type="text/css" />
        <!-- Custom stylesheets ( Put your own changes here ) -->
        <link href="@Url.Content("~/Content/custom.css")" rel="stylesheet" type="text/css" /> 

        @Scripts.Render("~/bundles/jquery")
        <!-- HTML5 shim, for IE6-8 support of HTML5 elements -->
        <!--[if lt IE 9]>
            <script src="@Url.Content("~/Scripts/html5shiv.js")"></script>
        <![endif]-->  

        <script type="text/javascript">
            //adding load class to body and hide page
            document.documentElement.className += 'loadstate';
        </script>
        <style type="text/css">
            .wrapper { padding: 10px; }
        </style>
    </head>

    <body>
        <!-- loading animation -->
        <div id="qLoverlay"></div>
        <div id="qLbar"></div>

        <div id="wrapper">
            <div class="row-fluid">
                <div class="span6">
                    <div class="box gradient">
                        <div class="title">
                            <h4>
                                <span class="icon16 icomoon-icon-camera"></span><span>部门图片</span>
                            </h4>
                            <a href="#" class="minimize">Minimize</a>
                        </div>
                        <div class="content">                         
                            <img src="@Model.ImageUrl" title="@Model.Name" alt="部门图片" />                           
                        </div>
                    </div>
                </div>
                <div class="span6">
                    <div class="box gradient">
                        <div class="title">
                            <h4>
                                <span class="icon16 icomoon-icon-notebook"></span><span>部门介绍</span>
                            </h4>
                            <a href="#" class="minimize">Minimize</a>
                        </div>
                        <div class="content">
                            <p>@Model.Description</p>
                        </div>
                    </div>

                    <div class="box gradient">
                        <div class="title">
                            <h4>
                                <span class="icon16 icomoon-icon-info-2"></span><span>用房面积</span>
                            </h4>
                            <a href="#" class="minimize">Minimize</a>
                        </div>

                        <div class="content noPad">
                            <table class="responsive table table-bordered table-striped">
                                <thead>
                                    <tr>
                                        <th style="width:180px">
                                            属性
                                        </th>
                                        <th>
                                            值（m<sup>2</sup>）
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>办公用房</td>
                                        <td>@Model.OfficeArea</td>
                                    </tr>
                                    <tr>
                                        <td>教学用房</td>
                                        <td>@Model.EducationArea</td>
                                    </tr>
                                    <tr>
                                        <td>实验用房</td>
                                        <td>@Model.ExperimentArea</td>
                                    </tr>
                                    <tr>
                                        <td>科研用房</td>
                                        <td>@Model.ResearchArea</td>
                                    </tr>          
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row-fluid">
                <div class="box gradient">
                    <div class="title">
                        <h4>
                            <span class="icon16 icomoon-icon-list-view-2"></span><span>部门分楼宇数据</span>
                        </h4>
                        <a href="#" class="minimize">Minimize</a>
                    </div>

                    <div class="content noPad">
                        <table class="responsive table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>
                                        楼宇名称
                                    </th>
                                    <th>
                                        房间数量
                                    </th>
                                    <th>
                                        使用总面积 (m<sup>2</sup>)
                                    </th>
                                </tr>
                            </thead>
                            <tfoot>
                                <tr>
                                    <td>合计</td>
                                    <td>@Model.Area.TotalRoomCount</td>
                                    <td>@Model.Area.UsableArea</td>
                                </tr>
                            </tfoot>
                            <tbody>
                            @foreach (var item in Model.Area.BuildingArea)
                            {
                                <tr>
                                    <td>
                                        @item.BuildingName
                                    </td>
                                    <td>
                                        @item.RoomCount
                                    </td>
                                    <td>
                                        @item.UsableArea
                                    </td>
                                </tr>
                            }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <!-- Placed scripts at the end of the document so the pages load faster -->
        @Scripts.Render("~/bundles/bootstrap")
        <script src="@Url.Content("~/Scripts/jquery.mousewheel.js")" type="text/javascript"></script>
        @Scripts.Render("~/bundles/jqueryui")
        @Scripts.Render("~/bundles/jqueryval")
        @Scripts.Render("~/bundles/highcharts")
        @Scripts.Render("~/bundles/datatable")
        @Scripts.Render("~/bundles/noty")
        <script src="@Url.Content("~/Plugins/misc/totop/jquery.ui.totop.min.js")" type="text/javascript" ></script>
        <script src="@Url.Content("~/Plugins/charts/sparkline/jquery.sparkline.min.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Plugins/charts/knob/jquery.knob.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Plugins/misc/nicescroll/jquery.nicescroll.min.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/function.js")" type="text/javascript"></script>
        <!-- Init plugins -->
        <script src="@Url.Content("~/Scripts/main.js")" type="text/javascript"></script>       
    </body>
</html>

