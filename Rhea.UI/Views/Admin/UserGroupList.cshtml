@model IEnumerable<Rhea.Data.Entities.UserGroup>
@{
    ViewBag.Title = "用户组列表";
    Layout = null;
}

<style type="text/css">
    .table tbody td
    {
        vertical-align: middle;
    }
</style>

<div class="box">
    <div class="box-header well" data-original-title>
        <h2>
            <i class="icon-align-left"></i>用户组列表</h2>
    </div>
    <div class="box-content">
        <div class="row-fluid">
            <div class="span12">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>
                                ID
                            </th>
                            <th>
                                名称
                            </th>
                            <th>
                                级别
                            </th>
                            <th>
                                操作
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @item.Id
                                </td>
                                <td>
                                    @item.Name
                                </td>
                                <td>
                                    @item.Rank
                                </td>
                                <td>
                                    <a class="btn btn-success manager-group-details" href="#" ref="@item.Id"><i class="icon-zoom-in icon-white">
                                    </i>查看</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>      
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        $('a#create-user-group').click(function () {
            ajaxLoadPage2('CreateUserGroup', 'Admin', {});
        });
    });
</script>
