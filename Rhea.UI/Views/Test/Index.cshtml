@section scripts {
<script src="@Url.Content("~/Scripts/highcharts.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/modules/exporting.js")" type="text/javascript"></script>
<script type="text/javascript">
    $(document).ready(function () {

        var dataList;

        $.getJSON('/Test/CollegeClassifyData', function (response) {
            dataList = response;
            setColumnChart(dataList[0], 0);
            setPieChart(dataList[0], 0);
        });

        function setPieChart(data, type) {
            var option = {
                chart: {
                    renderTo: 'container1',
                    plotBackgroundColor: null,
                    plotBorderWidth: null,
                    plotShadow: false
                },
                credits: {
                    enabled: false
                },
                title: {
                    text: '分类用房比例图'
                },
                tooltip: {
                    pointFormat: '{series.name}: <b>{point.percentage:.2f}%</b>',
                    percentageDecimals: 2
                },
                plotOptions: {
                    pie: {
                        allowPointSelect: true,
                        cursor: 'pointer',
                        dataLabels: {
                            enabled: true,
                            color: '#000000',
                            connectorColor: '#000000',
                            formatter: function () {
                                return '<b>' + this.point.name + '</b>: ' + this.percentage.toFixed(2) + ' %';
                            }
                        }
                    }
                },
                series: [{
                    type: 'pie',
                    name: '比例',
                    data: []
                }]
            };

            switch (type) {
                case "1":
                    pushData(option, data.OfficeDetailArea);
                    break;
                case "2":
                    pushData(option, data.EducationDetailArea);
                    break;
                case "3":
                    pushData(option, data.ExperimentDetailArea);
                    break;
                case "4":
                    pushData(option, data.ResearchDetailArea);
                    break;
                default:
                    option.series[0].data.push(['办公用房', parseFloat(data.OfficeArea)]);
                    option.series[0].data.push(['教学用房', parseFloat(data.EducationArea)]);
                    option.series[0].data.push(['实验用房', parseFloat(data.ExperimentArea)]);
                    option.series[0].data.push(['科研用房', parseFloat(data.ResearchArea)]);
                    break;
            }

            var chart1 = new Highcharts.Chart(option);
        }

        function setColumnChart(data, type) {
            var option = {
                chart: {
                    renderTo: 'container2',
                    type: 'column'
                },
                credits: {
                    enabled: false
                },
                title: {
                    text: '分类用房面积图'
                },
                xAxis: {
                    categories: []
                },
                yAxis: {
                    min: 0,
                    title: {
                        text: '面积 (m2)'
                    }
                },
                tooltip: {
                    formatter: function () {
                        return '' + this.x + ': ' + this.y + ' m2';
                    }
                },
                plotOptions: {
                    column: {
                        pointPadding: 0.2,
                        borderWidth: 0
                    }
                },
                series: [{
                    name: "面积",
                    data: []
                }]
            };

            switch (type) {
                case "1":
                    pushData2(option, data.OfficeDetailArea);
                    break;
                case "2":
                    pushData2(option, data.EducationDetailArea);
                    break;
                case "3":
                    pushData2(option, data.ExperimentDetailArea);
                    break;
                case "4":
                    pushData2(option, data.ResearchDetailArea);
                    break;
                default:
                    option.series[0].data.push(['办公用房', parseFloat(data.OfficeArea)]);
                    option.series[0].data.push(['教学用房', parseFloat(data.EducationArea)]);
                    option.series[0].data.push(['实验用房', parseFloat(data.ExperimentArea)]);
                    option.series[0].data.push(['科研用房', parseFloat(data.ResearchArea)]);
                    option.xAxis.categories = ['办公用房', '教学用房', '实验用房', '科研用房'];
                    break;
            }

            var chart2 = new Highcharts.Chart(option);
        }

        function pushData2(option, data) {
            $.each(data, function (i, item) {
                option.series[0].data.push([item.FunctionProperty, parseFloat(item.Area)]);
                option.xAxis.categories.push(item.FunctionProperty);
            });
        }

        $('a#toggle-side').toggle(function () {
            $('div#side-nav').show('slow');
        }, function () {
            $('div#side-nav').hide('slow');
        });
    });
</script>
