<!DOCTYPE html>
<html lang="zh">
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
        <title>房产管理系统</title>

        <!-- Mobile Specific Metas -->
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />

        <!-- Le styles -->
        @Styles.Render("~/Content/bootstrap")
        <link href="@Url.Content("~/Content/icons.css")" rel="stylesheet" type="text/css" />

        <!-- Main stylesheets -->
        <link href="@Url.Content("~/Content/main.css")" rel="stylesheet" type="text/css" />
    
        <!-- Le HTML5 shim, for IE6-8 support of HTML5 elements -->
        <!--[if lt IE 9]>
            <script src="@Url.Content("~/Scripts/html5shiv.js")"></script>
        <![endif]-->
    </head>
      
    <body class="errorPage">

        <div class="container-fluid">

            <div class="errorContainer">
                <div class="page-header">
                    <h1 class="center">403 <small>error</small></h1>
                </div>

                <h2 class="center">Access to this page is forbidden</h2>

                <div class="center">
                    <a href="javascript: history.go(-1)" class="btn" style="margin-right:10px;"><span class="icon16 icomoon-icon-arrow-left-10"></span>Go back</a>
                    <a href="dashboard.html" class="btn"><span class="icon16 icomoon-icon-screen"></span>Dashboard</a>
                </div>

            </div>

        </div><!-- End .container-fluid -->

        <!-- Le javascript
        ================================================== -->
        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")

        <script type="text/javascript">
            // document ready function
            $(document).ready(function() {
                //------------- Some fancy stuff in error pages -------------//
                $('.errorContainer').hide();
                $('.errorContainer').fadeIn(1000).animate({
                    'top': "50%", 'margin-top': +($('.errorContainer').height()/-2-30)
                    }, {duration: 750, queue: false}, function() {
                    // Animation complete.
                });
            });
        </script>
 
    </body>
</html>
