@if (Request.IsAuthenticated)
{
    <ul id="navbar-login" class="nav pull-right">
        <li class="dropdown">
            <a id="drop-login" class="dropdown-toggle" data-toggle="dropdown" role="button" href="#">
                <span class="hidden-phone">@User.Identity.Name</span> <span class="caret"></span>
            </a>               
            <ul class="dropdown-menu" role="menu" aria-labelledby="drop-login">
                <li><a href="#">设置</a></li>
                <li><a href="#">信息</a></li>
                <li class="divider"></li>
                <li>@Html.ActionLink("注销", "Logout", "Account")</li>
            </ul>
        </li>
    </ul>
} else {
    <div id="navbar-login" class="navbar-text pull-right">
        <a class="btn" href="@Url.Action("Login", "Account")">
            <i class="icon-user"></i><span class="hidden-phone">登录</span>
        </a>      
    </div>  
}
