@if (Request.IsAuthenticated)
{
    <div class="btn-group pull-right">
        <a class="btn dropdown-toggle" data-toggle="dropdown" href="#">
            <i class="icon-user"></i><span class="hidden-phone">@User.Identity.Name</span> <span class="caret"></span>
        </a>
        <ul class="dropdown-menu">
            <li><a href="#">设置</a></li>
            <li class="divider"></li>
            <li>@Html.ActionLink("注销", "Logout", "Account")</li>
        </ul>
    </div>
} else {
    <div class="btn-group pull-right">
        <a class="btn dropdown-toggle" data-toggle="dropdown" href="@Url.Action("Login", "Account")">
            <i class="icon-user"></i><span class="hidden-phone">登录</span>
        </a>      
    </div>  
}
