<!DOCTYPE html>
<html lang="zh">
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>       
        <title>@ViewBag.Title - 后勤管理综合平台</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        <link id="bs-css" href="@Url.Content("~/Content/bootstrap-classic.css")" type="text/css" rel="stylesheet">
        <style type="text/css">
            body
            {
                padding-bottom: 0;
            }
            .sidebar-nav
            {
                padding: 9px 0;
            }
        </style>        
        <link href="@Url.Content("~/Content/bootstrap-responsive.css")" type="text/css" rel="stylesheet">
        <link href="@Url.Content("~/Content/rhea-app.css")" type="text/css" rel="stylesheet">
        <link href="@Url.Content("~/Content/jquery-ui-1.8.21.custom.css")" type="text/css" rel="stylesheet">
        <link href="@Url.Content("~/Content/chosen.css")" type="text/css" rel="stylesheet">
        <link href="@Url.Content("~/Content/uniform.default.css")" type="text/css" rel="stylesheet">
        <link href="@Url.Content("~/Content/colorbox.css")" type="text/css" rel="stylesheet">
        <link href="@Url.Content("~/Content/opa-icons.css")" type="text/css" rel="stylesheet">
        <link href="@Url.Content("~/Content/dcverticalmegamenu.css")" type="text/css" rel="stylesheet">
        <script src="@Url.Content("~/Scripts/jquery-1.8.3.min.js")" type="text/javascript"></script>
        <!-- The HTML5 shim, for IE6-8 support of HTML5 elements -->
        <!--[if lt IE 9]>
	        <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
	    <![endif]-->
        <!-- The fav icon -->
        <link rel="shortcut icon" href="/img/favicon.ico">
    </head>
    <body>
        @if (TempData["Message"] != null && !String.IsNullOrEmpty(TempData["Message"].ToString()))
        {
            <script type="text/javascript">
                showMessage('@TempData["Message"]');
            </script>
        }
        
        @Html.Action("Nav", "Home", new { area = "" })

        <div class="container-fluid">
            <div class="row-fluid">
                @Html.Action("Menu", "Home", new { area = "" })

                <noscript>
                    <div class="alert alert-block span10">
                        <h4 class="alert-heading">
                            警告!</h4>
                        <p>
                            必须启用JavaScript来使用该系统.
                        </p>
                    </div>
                </noscript>

                <div id="content" class="span10">
                    <!-- content starts -->
                    <div>
                        <ul class="breadcrumb">
                            <li><a href="@Url.Action("Index", "Home", new { area = "" })">主页</a> <span class="divider">/</span> </li>
                            @RenderSection("breadcrumb", required: false)                            
                        </ul>
                    </div>                           
                    
                    @RenderBody()
                    <!-- content ends -->
                </div>              
            </div>
           
            <hr>

            <footer>
                <p class="pull-left">&copy; Jiangnan 2013</p>
                <p class="pull-right">Powered by: 下下签</p>
            </footer>
        </div>
        <!--/.fluid-container-->

        
        <!-- external javascript ================================================== -->      
    
        <script src="@Url.Content("~/Scripts/jquery-ui-1.8.21.custom.min.js")" type="text/javascript"></script>     
        @Scripts.Render("~/bundles/bootstrap")
        @Scripts.Render("~/bundles/jqueryval")
        <script src="@Url.Content("~/Scripts/jquery.hoverIntent.minified.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/jquery.dcverticalmegamenu.1.3.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/jquery.cookie.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/jquery.dataTables.min.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/jquery.chosen.min.js")" type="text/javascript"></script>    
        <script src="@Url.Content("~/Scripts/jquery.uniform.min.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/jquery.colorbox.min.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/noty/jquery.noty.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/noty/layouts/top.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/noty/themes/default.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/rhea.js")" type="text/javascript"></script>        
        <script src="@Url.Content("~/Scripts/function.js")" type="text/javascript"></script>
        <script type="text/javascript">
            $(document).ready(function () {
                $('#mega-1').dcVerticalMegaMenu({
                    rowItems: '3',
                    speed: 'fast',
                    effect: 'show',
                    direction: 'right'
                });
            });

            $(window).resize(function () {
                $('#mega-1').dcVerticalMegaMenu({
                    rowItems: '3',
                    speed: 'fast',
                    effect: 'show',
                    direction: 'right'
                });
            });
        </script>
        @RenderSection("scripts", required: false)
    </body>
</html>
