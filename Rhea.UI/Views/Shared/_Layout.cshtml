<!DOCTYPE html>
<html lang="zh">
    <head>
        <meta charset="utf-8">
        <title>房产管理系统 - @ViewBag.Title</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
        <meta content="width=device-width, initial-scale=1.0" name="viewport">
        @Styles.Render("~/Content/bootstrap")
        <link href="@Url.Content("~/Content/icons.css")" rel="stylesheet" type="text/css" />
        <!-- Plugins stylesheets -->
        <link href="@Url.Content("~/Plugins/tables/dataTables/jquery.dataTables.css")" type="text/css" rel="stylesheet" />

        <!-- Main stylesheets -->
        <link href="@Url.Content("~/Content/main.css")" rel="stylesheet" type="text/css" />
        <!-- Custom stylesheets ( Put your own changes here ) -->
        <link href="@Url.Content("~/Content/custom.css")" rel="stylesheet" type="text/css" /> 

        @Scripts.Render("~/bundles/jquery")
        <!-- HTML5 shim, for IE6-8 support of HTML5 elements -->
        <!--[if lt IE 9]>
            <script src="@Url.Content("~/Scripts/html5shiv.js")"></script>
        <![endif]-->  

        <script type="text/javascript">
            //adding load class to body and hide page
            document.documentElement.className += 'loadstate';
        </script>
    </head>

    <body>
        <!-- loading animation -->
        <div id="qLoverlay"></div>
        <div id="qLbar"></div>

        <div id="header" class="fixed">
            @Html.Action("Nav", new { controller = "Home", area = "" })
        </div>

        <div id="wrapper">
            @RenderBody()
        </div>

        <!-- Placed scripts at the end of the document so the pages load faster -->
        @Scripts.Render("~/bundles/bootstrap")
        <script src="@Url.Content("~/Scripts/jquery.mousewheel.js")" type="text/javascript"></script>
        @Scripts.Render("~/bundles/jqueryui")
        @Scripts.Render("~/bundles/highcharts")
        @Scripts.Render("~/bundles/datatable")
        <script src="@Url.Content("~/Plugins/misc/totop/jquery.ui.totop.min.js")" type="text/javascript" ></script> <!-- Back to top plugin -->

        <script src="@Url.Content("~/Scripts/function.js")" type="text/javascript"></script>
        <!-- Init plugins -->
        <script src="@Url.Content("~/Scripts/main.js")" type="text/javascript"></script>

        @RenderSection("scripts", required: false)
    </body>
</html>
