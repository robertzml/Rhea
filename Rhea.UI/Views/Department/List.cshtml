@model IEnumerable<Rhea.Model.Personnel.Department>
@using Rhea.Common;

@{
    ViewBag.Title = "部门列表";
    Layout = null;
}

<div class="box">
    <div class="box-header well" data-original-title>
        <h2>
            <i class="icon-align-left"></i>@ViewBag.Title</h2>
    </div>

    <div class="box-content">
        <table id="department-list" class="table table-striped table-bordered bootstrap-datatable datatable">
            <thead>
                <tr>
                    <th>
                        部门编号
                    </th>
                    <th>
                        部门名称
                    </th>
                    <th>
                        部门类型
                    </th>                    
                    <th>
                        操作
                    </th>
                </tr>
            </thead>
            <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@{
                        DepartmentType t = (DepartmentType)item.Type;
                        @t.DisplayName();
                        }        
                    </td>                 
                    <td>
                        <a class="btn btn-success btn-small" href="@Url.Action("Index", new { controller = "Department", id = item.Id, area = "" })"><i class="icon-zoom-in icon-white"></i>查看</a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>

<script type="text/javascript">
    $(function () {
        var dom = $('table#department-list');
        initDataTable(dom); 
    });
</script>