@model Rhea.Data.Entities.Department
@{
    ViewBag.Title = "部门信息";
    Layout = null;
}

<div class="box">
    <div class="box-header well" data-original-title>
        <h2>
            <i class="icon-th-list"></i>部门信息</h2>
    </div>
    <div class="box-content">
        <div class="page-header">
            <h1>
                @Model.Name <small>Id: @Model.Id</small></h1>
        </div>
        <div class="row-fluid ">
            <div class="span7">
                <h3>
                    介绍</h3>
                <p>@Model.Description</p>
            </div>
            <div class="span5">
                <div class="well">
                    <a id="department-pic" title="@Model.Name" href="@Model.ImageUrl">
                        <img src="@Model.ImageUrl" alt="图片"></a>
                </div>
            </div>
        </div>
    </div>
</div>
