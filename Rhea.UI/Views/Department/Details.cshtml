    <div class="span6">
        <div class="page-header">
            <h4>用房数据</h4>
        </div>
           
        <table class="responsive table table-bordered table-striped">
            <thead>
                <tr>
                    <th style="width:180px">
                        属性
                    </th>
                    <th>
                        值
                    </th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>总面积(m<sup>2</sup>)</td>
                    <td>@ViewBag.TotalArea</td>
                </tr>
                <tr>
                    <td>人均用房面积(m<sup>2</sup>/人)</td>
                    <td>@ViewBag.AvgArea</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
}