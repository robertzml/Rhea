    Layout = null;
}

<div class="row-fluid"> 
    <div class="span6">
        <div class="box">
            <div class="box-header well" data-original-title>
                <h2>
                    <i class="icon-th-list"></i>部门图片</h2>
            </div>
            <div class="box-content">
                <img src="@Model.ImageUrl" alt="部门图片" />
            </div>
        </div>
    </div>
    <div class="span6">
        <div class="box">
            <div class="box-header well" data-original-title>
                <h2>
                    <i class="icon-th-list"></i>部门介绍</h2>
            </div>
            <div class="box-content">
                <p>@Model.Description</p>
            </div>
        </div>
    </div>
</div>

<div class="row-fluid"> 
    <div class="box">
        <div class="box-header well" data-original-title>
            <h2>
                <i class="icon-th-list"></i>部门用房信息汇总</h2>
        </div>
