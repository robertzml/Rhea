@model Rhea.Model.Personnel.Department

@{
    ViewBag.Title = "部门概况";
    Layout = null;
}

<div class="row-fluid">
    <div class="span6">
        <div class="box gradient">
            <div class="title">
                <h4>
                    <span class="icon16 icomoon-icon-camera"></span><span>部门图片</span>
                </h4>
                <a href="#" class="minimize">Minimize</a>
            </div>
            <div class="content">
                <a class="colorbox-pic" id="department-pic" title="@Model.Name" href="@Model.ImageUrl">
                    <img src="@Model.ImageUrl" />
                </a>
            </div>
        </div>
    </div>
    <div class="span6">
        <div class="box gradient">
            <div class="title">
                <h4>
                    <span class="icon16 icomoon-icon-notebook"></span><span>局部地图</span>
                </h4>
                <a href="#" class="minimize">Minimize</a>
            </div>
            <div class="content">
                <a class="colorbox-pic" title="@Model.Name" href="@Model.PartMapUrl">
                    <img src="@Model.PartMapUrl" />
                </a>
            </div>
        </div>
    </div>
</div>

<div class="row-fluid"> 
    @Html.Action("BuildingSummary", new { controller = "Department", area = "", id = Model.Id })
</div>

<script type="text/javascript">
    $(function () {
        setBoxAction();
        $('a.colorbox-pic').colorbox({ transition: "elastic", maxWidth: "95%", maxHeight: "95%" }); 
    });
</script>