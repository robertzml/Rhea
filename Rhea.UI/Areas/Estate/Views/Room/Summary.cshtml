@model Rhea.Data.Entities.Room

@{
    ViewBag.Title = "房间摘要";
    Layout = null;
}

<table id="room-summary" class="table table-striped table-bordered bootstrap-datatable datatable">   
    <tbody>      
        <tr>
            <td style="width: 30%">
                编号
            </td>
            <td style="width: 70%">
                @Model.Number
            </td>           
        </tr>
        <tr>
            <td>
                名称
            </td>
            <td>
                @Model.Name
            </td>
        </tr>
        <tr>
            <td>
                部门
            </td>
            <td>
                @Model.Department.Name
            </td>
        </tr>
        <tr>
            <td>
                功能
            </td>
            <td>
                @Model.Function.Property
            </td>
        </tr>
        <tr>
            <td>
                面积
            </td>
            <td>
                @Model.UsableArea m<sup>2</sup>
            </td>
        </tr>
    </tbody>
</table>
