@model Rhea.Model.Estate.Room

@{
    ViewBag.Title = "Summary";
    Layout = null;
}

<table class="table table-bordered table-striped">   
    <tbody>      
        <tr>
            <td style="width: 30%">
                编号
            </td>
            <td style="width: 70%">
                @Model.Number
            </td>           
        </tr>
        <tr>
            <td>
                名称
            </td>
            <td>
                @Model.Name
            </td>
        </tr>
        <tr>
            <td>
                部门
            </td>
            <td>
                @ViewBag.DepartmentName
            </td>
        </tr>
        <tr>
            <td>
                功能
            </td>
            <td>
                @Model.Function.Property
            </td>
        </tr>
        <tr>
            <td>
                使用面积
            </td>
            <td>
                @Model.UsableArea m<sup>2</sup>
            </td>
        </tr>
    </tbody>
</table>

<a class="btn btn-primary" data-toggle="modal" href="/Estate/Room/Details/@Model.Id" data-target="#myModal">
    <i class="icon-zoom-in icon-white"></i>详细
</a>

<div id="myModal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
        <h3 id="myModalLabel">@Model.Name</h3>
    </div>
    <div class="modal-body">    
    </div>
    <div class="modal-footer">
        <button class="btn btn-primary" data-dismiss="modal" aria-hidden="true">Close</button>      
    </div>
</div>
