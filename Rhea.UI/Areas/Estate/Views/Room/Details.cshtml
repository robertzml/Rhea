                        </tr>
                        <tr>
                            <td>
                                更新时间
                            </td>
                            <td>
                                @Model.Editor.Time
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div class="tab-pane" id="additional">
                <table class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th style="width: 30%">
                                属性
                            </th>
                            <th style="width: 70%">
