                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@Html.Action("AssignHistory", new { controller = "Room", area = "Estate", id = Model.Id })

<script type="text/javascript">
    $(function () {
        $('#myTab a:first').tab('show');
        $('#myTab a').click(function (e) {
            e.preventDefault();
            $(this).tab('show');
        });
    });
</script>