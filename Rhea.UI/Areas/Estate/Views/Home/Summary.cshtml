@model Rhea.UI.Areas.Estate.Models.EstateSummaryModel
@{
    ViewBag.Title = "摘要";
    Layout = null;
}

<div class="box">
    <div class="box-header well" data-original-title>
        <h2><i class="icon-glass"></i>学校房屋总计</h2>    
    </div>

    <div class="box-content">        
        <div class="row-fluid">
            <div class="span12">
                <p class="lead">
                    现学校共有<br /><strong>楼群：@Model.BuildingGroupCount 个，楼宇：@Model.BuildingCount 栋,
                    楼层：@Model.FloorCount 层，房屋：@Model.RoomCount 间。</strong>
                </p>
            </div>
        </div>
    </div>
</div>

<div class="row-fluid">
    <div class="span6">
        @Html.Action("TotalUseTypeArea", new { controller = "Statistic", area = "" })
    </div>

    <div class="span6">
        @Html.Action("LandType", new { controller = "Statistic", area = "" })
    </div>
</div>
