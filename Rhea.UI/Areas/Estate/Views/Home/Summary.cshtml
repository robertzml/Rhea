@model Rhea.UI.Areas.Estate.Models.EstateSummaryModel
@{
    ViewBag.Title = "摘要";   
    Layout = null;
}

<div class="heading">
    <h3>@ViewBag.Title</h3>

    @Html.Action("SearchInline", new { controller = "Home", area = "" })
                    
    <ul class="breadcrumb">
        <li>你的位置:</li>
        <li>
            <a href="#" class="tip" title="回到首页">
                <span class="icon16 icomoon-icon-home "></span>
            </a> 
            <span class="divider">
                <span class="icon16 icomoon-icon-arrow-right-2"></span>
            </span>
        </li>
        <li class="active">房产概况</li>
    </ul>

</div><!-- End .heading-->

<div class="row-fluid">    
    <div class="span5">
        @Html.Action("TotalUseTypeArea", new { controller = "Statistic", area = "" })
    </div>

    <div class="span5">
        @Html.Action("LandType", new { controller = "Statistic", area = "" })
    </div>    

    <div class="span2">
        <div class="infoview">
            <h4>总计</h4>
            <ul>
                <li class="clearfix">
                    <div class="icon">
                        <span class="icon32 icomoon-icon-cog dark"></span>
                    </div>
                    <span class="number">1</span> 
                    <span class="txt"> 校区 </span>
                </li>       
                <li class="clearfix">
                    <div class="icon">
                        <span class="icon32 icomoon-icon-basket gray"></span>
                    </div>
                    <span class="number">@Model.BuildingGroupCount</span> 
                    <span class="txt"> 楼群 </span>
                </li>
                <li class="clearfix">
                    <div class="icon">
                        <span class="icon32 icomoon-icon-support red"></span>
                    </div>
                    <span class="number">@Model.BuildingCount</span> 
                    <span class="txt"> 楼宇 </span>
                </li>
                <li class="clearfix">
                    <div class="icon">
                        <span class="icon32 icomoon-icon-new green"></span>
                    </div>
                    <span class="number">@Model.FloorCount</span> 
                    <span class="txt"> 楼层 </span>
                </li>
                <li class="clearfix">
                    <div class="icon">
                        <span class="icon32 icomoon-icon-comments-4 blue"></span>
                    </div>
                    <span class="number">@Model.RoomCount</span> 
                    <span class="txt"> 房间 </span>
                </li>
            </ul>
        </div><!-- End .reminder -->
    </div>                                      

</div>

<script type="text/javascript">
    $(function () {
        setBox();
    });
</script>