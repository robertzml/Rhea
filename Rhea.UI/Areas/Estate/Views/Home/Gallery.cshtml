@model IEnumerable<Rhea.Data.Estate.GalleryModel>
@{
    ViewBag.Title = "展示";
    Layout = null;
}

@Html.Action("Heading", new { controller = "Common", area = "", title = ViewBag.Title, active = "房产概况" })

<div class="row-fluid">
    <div class="span12">
        <div class="box">
            <div class="title">
                <h4>
                    <span class="icon16 icomoon-icon-film-2"></span><span>图片展示</span>
                </h4>
                <a href="#" class="minimize">Minimize</a>
            </div>

            <div class="content noPad">
                <div class="camera_wrap camera_magenta_skin" id="camera_wrap_2">
                @foreach (var item in Model)
                {
                    <div data-thumb="@item.ThumbnailUrl" data-src="@item.ImageUrl">
                        <div class="camera_caption fadeFromBottom">
                            @item.Description
                        </div>
                    </div>
                }
                </div><!-- #camera_wrap_2 -->
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    $(function () {
        $('#camera_wrap_2').camera({
            height: '600px',            
            pagination: false,
            thumbnails: true
        });
    });
</script>