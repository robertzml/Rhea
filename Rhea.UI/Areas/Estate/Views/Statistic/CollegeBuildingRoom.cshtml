@{
    Layout = null;
    ViewBag.Title = "学院楼宇用房统计";
}

<div class="box">
    <div class="box-header well" data-original-title>
        <h2>
            <i class="icon-align-left"></i>@ViewBag.Title</h2>
    </div>

    <div class="box-content">
        <div class="row-fluid">
            <div class="span12">
                <span>选择：</span>
                <select id="college-list">
                </select>           
            </div>
        </div>
        <div class="row-fluid">
            <div class="span12">
                <div id="container1" style="width: 99%">
                </div>
            </div>
        </div>
        <div class="row-fluid">
            <div class="span12">
                <div id="container2" style="width: 99%">
                </div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">

    $(document).ready(function () {
        var dataList;

        $.getJSON('/Statistic/CollegeBuildingData', function (response) {
            dataList = response;
            initSelectList(response);
        });

        function initSelectList(data) {
            $.each(data, function (i, item) {
                $('#college-list').append("<option value='" + item.Id + "'>" + item.CollegeName + "</option>");
            });

            setPieChart(data[0].BuildingArea);
            setColumnChart(data[0].BuildingArea);
        }

        $('#college-list').change(function () {
            var id = $(this).val();
            for (var i = 0; i < dataList.length; i++) {
                if (dataList[i].Id == id) {
                    setPieChart(dataList[i].BuildingArea);
                    setColumnChart(dataList[i].BuildingArea);
                    break;
                }
            }
        });

        function setPieChart(data) {
            var option = {
                chart: {
                    renderTo: 'container1',
                    plotBackgroundColor: null,
                    plotBorderWidth: null,
                    plotShadow: false
                },
                credits: {
                    enabled: false
                },
                title: {
                    text: '学院分楼统计'
                },
                tooltip: {
                    pointFormat: '面积: <b>{point.y}m<sup>2</sup></b>',
                    percentageDecimals: 1
                },
                plotOptions: {
                    pie: {
                        allowPointSelect: true,
                        cursor: 'pointer',
                        dataLabels: {
                            enabled: true,
                            color: '#000000',
                            connectorColor: '#000000',
                            formatter: function () {
                                return '<b>' + this.point.name + '</b>: ' + this.percentage.toFixed(2) + ' %';
                            }
                        }
                    }
                },
                series: [{
                    type: 'pie',
                    name: '比例',
                    data: []
                }]
            };

            $.each(data, function (i, item) {
                option.series[0].data.push([item.BuildingName, parseFloat(item.Area)]);               
            });            

            var chart1 = new Highcharts.Chart(option);
        }

        function setColumnChart(data) {
            var option = {
                chart: {
                    renderTo: 'container2',
                    type: 'column'
                },
                credits: {
                    enabled: false
                },
                title: {
                    text: '学院分楼统计'
                },
                xAxis: {
                    categories: []
                },
                yAxis: {
                    min: 0,
                    title: {
                        text: '面积 (m2)'
                    }
                },
                tooltip: {
                    formatter: function () {
                        return this.y + ' m2';
                    }
                },
                plotOptions: {
                    column: {
                        pointPadding: 0.2,
                        borderWidth: 0
                    }
                },
                series: [{
                    name: "面积",
                    data: []
                }]
            };

            $.each(data, function (i, item) {
                option.series[0].data.push([item.BuildingName, parseFloat(item.Area)]);
                option.xAxis.categories.push(item.BuildingName);
            });

            var chart2 = new Highcharts.Chart(option);
        }
    });

</script>