@model Rhea.Model.Estate.Building

@{
    ViewBag.Title = "楼宇信息";
    Layout = null;
}

<div class="row-fluid">
    <div class="span6">
        <div class="box">
            <div class="title">
                <h4>
                    <span class="icon16 icomoon-icon-camera"></span><span>楼宇全景</span>
                </h4>
                <a href="#" class="minimize">Minimize</a>
            </div>
            <div class="content noPad">
                <a id="building-pic" title="@Model.Name" href="@Model.ImageUrl">
                    <img src="@Model.ImageUrl" alt="楼宇全景" />
                </a>
            </div>
        </div>
    </div>
    <div class="span6">
        <div class="box">
            <div class="title">
                <h4>
                    <span class="icon16 icomoon-icon-glasses"></span><span>局部地图</span>
                </h4>
                <a href="#" class="minimize">Minimize</a>
            </div>
            <div class="content noPad">
                <img src="@Model.PartMapUrl" alt="局部地图" />
            </div>
        </div>
    </div>
</div>

<div class="row-fluid">    
    <div class="page-header">
            <h3>楼宇信息</h3>
    </div>

    <div class="row-fluid">
        <table class="responsive table table-bordered table-striped">
            <thead>
                <tr>
                    <th>
                        属性
                    </th>
                    <th>
                        值
                    </th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>
                        @Html.DisplayNameFor(model => model.Name)
                    </td>
                    <td>
                        @Model.Name
                    </td>
                </tr>
                <tr>
                    <td>
                        @Html.DisplayNameFor(model => model.BuildArea)
                    </td>
                    <td>
                        @Model.BuildArea m<sup>2</sup>
                    </td>
                </tr>
                <tr>
                    <td>
                        @Html.DisplayNameFor(model => model.UsableArea)
                    </td>
                    <td>
                        @Model.UsableArea m<sup>2</sup>
                    </td>
                </tr>
                <tr>
                    <td>
                        @Html.DisplayNameFor(model => model.AboveGroundFloor)
                    </td>
                    <td>
                        @Model.AboveGroundFloor
                    </td>
                </tr>
                <tr>
                    <td>
                        @Html.DisplayNameFor(model => model.UnderGroundFloor)
                    </td>
                    <td>
                        @Model.UnderGroundFloor
                    </td>
                </tr>
                <tr>
                    <td>
                        @Html.DisplayNameFor(model => model.UseType)
                    </td>
                    <td>
                        @{
                            var type = (BuildingUseType)Model.UseType;
                            @type.DisplayName(); 
                        }
                    </td>
                </tr>
                <tr>
                    <td>房间数量</td>
                    <td>@ViewBag.RoomCount</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>

<div class="row-fluid">
    <div class="span12">
    @Html.Action("Department", "Building", new { area = "Estate", id = Model.Id })
    </div>
</div>

<script type="text/javascript">
    $(function () {
        setBoxAction();
    });
</script>