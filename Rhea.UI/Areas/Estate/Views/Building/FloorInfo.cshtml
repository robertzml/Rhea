@model Rhea.UI.Areas.Estate.Models.FloorViewModel

@{
    ViewBag.Title = "楼层信息";
    Layout = null;
}

<div class="page-header">
    <h3>
        @ViewBag.Title</h3>
</div>

<div class="row-fluid">
    <div class="span12">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th style="width:30%;">
                        属性
                    </th>
                    <th style="width:70%;">
                        值
                    </th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>
                        @Html.DisplayNameFor(model => model.Name)
                    </td>
                    <td>
                        @Model.Name
                    </td>
                </tr>
                <tr>
                    <td>
                        @Html.DisplayNameFor(model => model.Number)
                    </td>
                    <td>
                        @Model.Number / @Model.AboveGroundFloor
                    </td>
                </tr>
                <tr>
                    <td>
                        @Html.DisplayNameFor(model => model.BuildArea)
                    </td>
                    <td>
                        @Model.BuildArea m<sup>2</sup>
                    </td>
                </tr>
                <tr>
                    <td>
                        @Html.DisplayNameFor(model => model.UsableArea)
                    </td>
                    <td>
                        @Model.UsableArea m<sup>2</sup>
                    </td>
                </tr>
                <tr>
                    <td>
                        @Html.DisplayNameFor(model => model.RoomCount)
                    </td>
                    <td>
                        @Model.RoomCount
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>

<div class="row-fluid">
    <div class="span12">
    @Html.Action("FloorDepartment", "Building", new { area = "Estate", id = Model.BuildingId, floor = Model.Number })
    </div>
</div>