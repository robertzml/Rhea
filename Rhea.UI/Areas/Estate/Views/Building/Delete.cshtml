@model Rhea.Data.Entities.Building

@{
    ViewBag.Title = "楼宇删除";
    Layout = null;
    AjaxOptions ajaxOpts = new AjaxOptions
    {
        UpdateTargetId = "ajax-content1",
        Url = Url.Action("Delete", "Building", new { area = "Estate" })
    }; 
}

<div class="box">
    <div class="box-header well" data-original-title>
        <h2>
            <i class="icon-th-list"></i>楼宇信息</h2>
    </div>

    <div class="box-content">
        <div class="page-header">
            <h2>
                确认是否删除该信息?</h2>
        </div>

        <div class="row-fluid">
            <div class="span12">
                <fieldset>
                    <table class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th style="width: 20%">
                                    属性
                                </th>
                                <th style="width: 80%">
                                    值
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>
                                    @Html.DisplayNameFor(model => model.Name)
                                </td>
                                <td>
                                    @Model.Name
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    @Html.DisplayNameFor(model => model.BuildArea)
                                </td>
                                <td>
                                    @Model.BuildArea
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    @Html.DisplayNameFor(model => model.UsableArea)
                                </td>
                                <td>
                                    @Model.UsableArea
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    @Html.DisplayNameFor(model => model.AboveGroundFloor)
                                </td>
                                <td>
                                    @Model.AboveGroundFloor
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    @Html.DisplayNameFor(model => model.UnderGroundFloor)
                                </td>
                                <td>
                                    @Model.UnderGroundFloor
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    @Html.DisplayNameFor(model => model.Remark)
                                </td>
                                <td>
                                    @Model.Remark
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </fieldset>

                @using (Ajax.BeginForm(ajaxOpts))
                {
                    @Html.HiddenFor(model => model.Id)
                    <div class="form-actions">
                        <button type="submit" class="btn btn-primary">
                            删除</button>
                        <button id="cancel" class="btn">
                            取消</button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $('button#cancel').click(function () {
            ajaxLoadPage("Index", "Building", "Estate", { id: '@Model.Id' });
            return false;
        });
    });
</script>
