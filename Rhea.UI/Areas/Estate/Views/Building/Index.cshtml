@model int
@{
    ViewBag.Title = "楼宇主页";
    Layout = null;
}

<div class="row-fluid">
    <div class="box span12">
        <div class="box-header well" data-original-title>
            <h2>
                <i class="icon-th-list"></i>楼宇</h2>
        </div>

        <div class="box-content">  
            <div class="row-fluid">  
                <div class="span10">
                    <div id="svg"></div>
                </div>                
                <div class="span2">
                    <p>
                        <a id="zoom-in" href="#" class="btn"><i class="icon-zoom-in"></i>放大</a>
                        <a id="zoom-out" href="#" class="btn"><i class=" icon-zoom-out"></i>缩小</a>
                    </p>
                    <div id="room-summary"></div>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="row-fluid">
    <div class="span6">
        @Html.Action("Details", new { controller = "Building", area = "Estate", id = Model })
    </div>
    <div class="span6">
        @Html.Action("FloorList", new { controller = "Building", area = "Estate", buildingId = Model })
    </div>
</div>