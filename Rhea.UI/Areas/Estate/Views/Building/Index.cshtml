<script type="text/javascript">
    $(function () {
        $('.inlinesparkline').sparkline('html', { 
            width:180, 
            height:30,
            lineColor: '#88bbc8',
	        fillColor: '#f2f7f9',
	        spotColor: '#e72828',
	        maxSpotColor: '#005e20',
	        minSpotColor: '#f7941d',
	        lineWidth: 2
         });

        $('button#building-intro').click(function () {
            ajaxContentLoadPage("Intro", "Building", "Estate", { id: '@Model.BuildingId' }, $('#ajax-content2'));
            return false;
        });

        $('button#building-details').click(function () {
            ajaxContentLoadPage("Details", "Building", "Estate", { id: '@Model.BuildingId' }, $('#ajax-content2'));
            return false;
        });

        $('button#return-building-group').click(function () {
            ajaxLoadPage("Index", "BuildingGroup", "Estate", { id: '@Model.BuildingGroupId' });
            return false;
        });

        $('a#room-list').click(function () {
            ajaxContentLoadPage("ListByBuilding", "Room", "Estate", { buildingId: '@Model.BuildingId' }, $('#ajax-content2'));
            return false;
        });

        $('ul#floor-list li a').click(function () {
            var floor = $(this).attr('ref');
            ajaxContentLoadPage("FloorView", "Building", "Estate", { id: '@Model.BuildingId', floor: floor }, $('#ajax-content2'));
            return false;
        });
    });
</script>