@model Rhea.UI.Areas.Estate.Models.SubregionIndexModel

@{
    ViewBag.Title = Model.Subregion.Name;
    Layout = null;
}

<!-- BEGIN PAGE HEADER-->
<h3 class="page-title">
    @ViewBag.Title <small>@Model.Subregion.Remark</small>
</h3>
<div class="page-bar">
    <ul class="page-breadcrumb">
        <li>
            <i class="fa fa-home"></i>
            <a href="@Url.Action("Index", new { area = "Estate", controller= "Home" })">房产管理</a>
            <i class="fa fa-angle-right"></i>
        </li>
        <li>
            <a href="#">分区主页</a>
            <i class="fa fa-angle-right"></i>
        </li>
        <li>
            <a href="#">@ViewBag.Title</a>
        </li>
    </ul>
    <div class="page-toolbar">
        <div class="btn-group pull-right">
            <button type="button" class="btn btn-fit-height grey-salt dropdown-toggle" data-toggle="dropdown" data-hover="dropdown" data-delay="1000" data-close-others="true">
                Actions <i class="fa fa-angle-down"></i>
            </button>
            <ul class="dropdown-menu pull-right" role="menu">
                <li>
                    <a href="#">Action</a>
                </li>
                <li class="divider">
                </li>
                <li>
                    <a href="#">Separated link</a>
                </li>
            </ul>
        </div>
    </div>
</div>
<!-- END PAGE HEADER-->

<!-- BEGIN PAGE CONTENT-->
<div class="row profile">
    <div class="col-md-12">
        <!--BEGIN TABS-->
        <div class="tabbable tabbable-custom tabbable-full-width">
            <ul class="nav nav-tabs">
                <li class="active">
                    <a href="#tab_1_1" data-toggle="tab">
                        摘要
                    </a>
                </li>
                <li>
                    <a href="#tab_1_2" data-toggle="tab">
                        信息
                    </a>
                </li>
                <li>
                    <a href="#tab_1_3" data-toggle="tab">
                        房间
                    </a>
                </li>
                <li>
                    <a href="#tab_1_4" data-toggle="tab">
                        统计
                    </a>
                </li>
            </ul>
            <div class="tab-content">
                <div class="tab-pane active" id="tab_1_1">
                    <div class="row">
                        <div class="col-md-3">
                            <div class="panel panel-default">
                                <div class="panel-heading">
                                    <h3 class="panel-title">分区全景</h3>
                                </div>
                                <div class="panel-body no-padding">
                                    <img src="@Model.Subregion.ImageUrl" class="img-responsive" alt="" />
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 profile-info">
                            <h1>@Model.Subregion.Name</h1>
                            <p>
                                Lorem ipsum dolor sit amet, consectetuer adipiscing elit, sed diam nonummy nibh euismod tincidunt laoreet dolore magna aliquam tincidunt erat volutpat laoreet dolore magna aliquam tincidunt erat volutpat.
                            </p>
                            <p>
                            </p>
                            <ul class="list-inline">
                                <li>
                                    <i class="fa fa-map-marker"></i> Spain
                                </li>
                                <li>
                                    <i class="fa fa-calendar"></i> 18 Jan 1982
                                </li>
                                <li>
                                    <i class="fa fa-briefcase"></i> Design
                                </li>
                                <li>
                                    <i class="fa fa-star"></i> Top Seller
                                </li>
                                <li>
                                    <i class="fa fa-heart"></i> BASE Jumping
                                </li>
                            </ul>
                        </div>
                        <div class="col-md-3">
                            <div class="portlet profile-summary">
                                <div class="portlet-title">
                                    <div class="caption">
                                        概况
                                    </div>
                                </div>
                                <div class="portlet-body">
                                    <ul class="list-unstyled">
                                        <li>
                                            <span class="sale-info">
                                                名称
                                            </span>
                                            <span class="sale-num">
                                                @Model.Subregion.Name
                                            </span>
                                        </li>
                                        <li>
                                            <span class="sale-info">
                                                地上楼层数
                                            </span>
                                            <span class="sale-num">
                                                @Model.Subregion.AboveGroundFloor
                                            </span>
                                        </li>
                                        <li>
                                            <span class="sale-info">
                                                地下楼层数
                                            </span>
                                            <span class="sale-num">
                                                @Model.Subregion.UnderGroundFloor
                                            </span>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-3">
                            <div class="list-group">
                                @foreach (var item in Model.Subregion.Floors)
                                {
                                    <a href="#" class="list-group-item list-group-item-success" ref="@item.Id">
                                        <i class="fa fa-road"></i> @item.Name
                                    </a>
                                }
                                <a href="/Estate/Building/Index/@Model.Parent.BuildingId" class="list-group-item list-group-item-info ajaxify">
                                    <i class="fa fa-reply"></i> 回到楼群
                                </a>
                            </div>
                        </div>
                        <div class="col-md-9">

                        </div>
                    </div>
                </div>
                <div id="tab_1_2" class="tab-pane">
                    <div class="row">
                        <div class="col-md-2">
                            <ul class="ver-inline-menu tabbable margin-bottom-10">
                                <li class="active">
                                    <a data-toggle="tab" href="#tab_1_2_1">
                                        <i class="fa fa-info"></i> 分区信息
                                    </a>
                                    <span class="after">
                                    </span>
                                </li>
                                <li>
                                    <a data-toggle="tab" href="#tab_1_2_2">
                                        <i class="fa fa-image"></i> 图片集
                                    </a>
                                </li>
                            </ul>
                        </div>
                        <div class="col-md-10">
                            <div class="tab-content">
                                <div id="tab_1_2_1" class="tab-pane active">
                                    <div class="portlet">
                                        <div class="portlet-title">
                                            <div class="caption">
                                                <i class="fa fa-info-circle"></i> 详细信息
                                            </div>
                                        </div>
                                        <div class="portlet-body">
                                            @Html.Action("SubregionDetails", new { id = Model.Subregion.BuildingId })
                                        </div>
                                    </div>
                                </div>
                                <div class="tab-pane" id="tab_1_2_2">

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div id="tab_1_3" class="tab-pane">
                    <div class="portlet box blue">
                        <div class="portlet-title">
                            <div class="caption">
                                <i class="fa fa-gift"></i>房间列表
                            </div>
                            <div class="tools">
                                <a href="#" class="collapse">
                                </a>
                                <a href="#" data-load="true" data-url="/Estate/Room/ListByBuilding?buildingId=@Model.Subregion.BuildingId" class="reload">
                                </a>
                                <a href="#" class="remove">
                                </a>
                            </div>
                        </div>
                        <div class="portlet-body portlet-empty">
                        </div>
                    </div>
                </div>
                <div id="tab_1_4" class="tab-pane">
                    <div class="row">
                        <div class="col-md-2">
                            <ul class="ver-inline-menu tabbable margin-bottom-10">
                                <li class="active">
                                    <a data-toggle="tab" href="#tab_1_4_1">
                                        <i class="fa fa-sitemap"></i> 分类统计
                                    </a>
                                    <span class="after">
                                    </span>
                                </li>
                                <li>
                                    <a data-toggle="tab" href="#tab_1_4_2">
                                        <i class="fa fa-group"></i> Membership
                                    </a>
                                </li>
                                <li>
                                    <a data-toggle="tab" href="#tab_1_4_3">
                                        <i class="fa fa-leaf"></i> Terms Of Service
                                    </a>
                                </li>
                            </ul>
                        </div>
                        <div class="col-md-10">
                            <div class="tab-content">
                                <div id="tab_1_4_1" class="tab-pane active">
                                    <div class="portlet">
                                        <div class="portlet-title">
                                            <div class="caption">
                                                <i class="fa fa-sitemap"></i>分类统计
                                            </div>
                                            <div class="tools">
                                                <a href="#" class="collapse">
                                                </a>
                                                <a href="#" data-load="true" data-url="/Estate/Building/RoomClassify/@Model.Subregion.BuildingId" class="reload">
                                                </a>
                                                <a href="#" class="remove">
                                                </a>
                                            </div>
                                        </div>
                                        <div class="portlet-body portlet-empty">
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!--END TABS-->
    </div>
</div>
<!-- END PAGE CONTENT-->


<script type="text/javascript">
    $(function () {

        $('a.sub-building-ajax-link').click(function (e) {
            var url = "/Estate/Building/Index";
            var buildingId = $(this).attr('ref');
            var request = { id: buildingId };

            Rhea.ajaxLoadPage($(this), e, url, request);
            return false;
        });

        $('.portlet .portlet-title a.reload[data-load="true"]').click();

    });
</script>