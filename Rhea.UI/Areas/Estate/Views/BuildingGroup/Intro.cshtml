@model Rhea.Model.Estate.BuildingGroup
@{
    ViewBag.Title = "楼群概况";
    Layout = null;
}

<div class="row-fluid">
    <div class="span6">
        <div class="box">
            <div class="title">
                <h4>
                    <span class="icon16 icomoon-icon-glasses"></span><span>楼群全景</span>
                </h4>
                <a href="#" class="minimize">Minimize</a>
            </div>
            <div class="content noPad">
                <a id="building-group-pic" title="@Model.Name" href="@Model.ImageUrl">
                    <img src="@Model.ImageUrl" alt="楼群全景" />
                </a>
            </div>
        </div>
    </div>
    <div class="span6">
        <div class="box">
            <div class="title">
                <h4>
                    <span class="icon16 icomoon-icon-glasses"></span><span>局部地图</span>
                </h4>
                <a href="#" class="minimize">Minimize</a>
            </div>
            <div class="content noPad">
                <img src="@Model.PartMapUrl" alt="局部地图" />
            </div>
        </div>
    </div>
</div>

<div class="row-fluid">
    <div class="box">
        <div class="title">
            <h4>
                <span class="icon16 icomoon-icon-tag"></span><span>@Model.Name</span>
            </h4>
            <a href="#" class="minimize">Minimize</a>
        </div>
        <div class="content noPad">
            <div class="row-fluid">
                <div class="span6">
                    <table class="responsive table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>
                                    属性
                                </th>
                                <th>
                                    值
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>
                                    @Html.DisplayNameFor(model => model.Name)
                                </td>
                                <td>
                                    @Model.Name
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    @Html.DisplayNameFor(model => model.BuildDate)
                                </td>
                                <td>
                                    @if (Model.BuildDate != null)
                                    {                                    
                                        @Convert.ToDateTime(Model.BuildDate).ToShortDateString();
                                    }
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    @Html.DisplayNameFor(model => model.EquityNumber)
                                </td>
                                <td>
                                    @Model.EquityNumber
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <div class="span6">
                    <table class="responsive table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>
                                    属性
                                </th>
                                <th>
                                    值
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>
                                    @Html.DisplayNameFor(model => model.BuildArea) 
                                </td>
                                <td>
                                    @Model.BuildArea m<sup>2</sup>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    @Html.DisplayNameFor(model => model.UsableArea) 
                                </td>
                                <td>
                                    @Model.UsableArea m<sup>2</sup>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    @Html.DisplayNameFor(model => model.Floorage)
                                </td>
                                <td>
                                    @Model.Floorage m<sup>2</sup>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row-fluid">
    <div class="span12">
    @Html.Action("Department", "BuildingGroup", new { area = "Estate", id = Model.Id })
    </div>
</div>


<script type="text/javascript">
    $(function () {
        $('a#building-group-pic').colorbox({ transition: "elastic", maxWidth: "95%", maxHeight: "95%" }); 
    });
</script>