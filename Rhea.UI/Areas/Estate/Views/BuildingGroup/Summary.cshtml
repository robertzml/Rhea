@model Rhea.Model.Estate.BuildingGroup
@{
    ViewBag.Title = "楼群概况";
    Layout = null;
}

<div class="row-fluid"> 
    <div class="span6">
        <div class="box">
            <div class="box-header well" data-original-title>
                <h2>
                    <i class="icon-th-list"></i>楼群全景</h2>
            </div>
            <div class="box-content">
                <img src="@Model.ImageUrl" alt="楼群全景" />
            </div>
        </div>
    </div>
    <div class="span6">
        <div class="box">
            <div class="box-header well" data-original-title>
                <h2>
                    <i class="icon-th-list"></i>局部地图</h2>
            </div>
            <div class="box-content">
                <img src="@Model.PartMapUrl" alt="局部地图" />
            </div>
        </div>
    </div>
</div>

<div class="row-fluid"> 
    <div class="box">
        <div class="box-header well" data-original-title>
            <h2>
                <i class="icon-th-list"></i>@Model.Name</h2>
        </div>
        <div class="box-content">
            <div class="row-fluid">        
                <div class="span6">
                    <table class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>
                                    属性
                                </th>
                                <th>
                                    值
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>
                                    @Html.DisplayNameFor(model => model.Name)
                                </td>
                                <td>
                                    @Model.Name
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    @Html.DisplayNameFor(model => model.BuildDate)
                                </td>
                                <td>
                                    @if (Model.BuildDate != null)
                                    {                                    
                                        @Convert.ToDateTime(Model.BuildDate).ToShortDateString();
                                    }
                                </td>
                            </tr>                                                        
                        </tbody>
                    </table>
                </div>
                <div class="span6">
                    <table class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>
                                    属性
                                </th>
                                <th>
                                    值
                                </th>
                            </tr>
                        </thead>
                        <tbody>                            
                            <tr>
                                <td>
                                    @Html.DisplayNameFor(model => model.BuildArea) 
                                </td>
                                <td>
                                    @Model.BuildArea m<sup>2</sup>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    @Html.DisplayNameFor(model => model.UsableArea) 
                                </td>
                                <td>
                                    @Model.UsableArea m<sup>2</sup>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    @Html.DisplayNameFor(model => model.Floorage)
                                </td>
                                <td>
                                    @Model.Floorage m<sup>2</sup>
                                </td>
                            </tr>                               
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>