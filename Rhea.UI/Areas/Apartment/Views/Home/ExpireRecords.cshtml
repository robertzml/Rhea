@model IEnumerable<Rhea.Model.Apartment.ResideRecord>

@{
    Layout = null;
}

<ul class="feeds">
    @foreach (var item in Model)
    {
        <li>
            <div class="col1">
                <div class="cont">
                    <div class="cont-col1">
                        <div class="label label-sm label-info">
                            <i class="fa fa-bullhorn"></i>
                        </div>
                    </div>
                    <div class="cont-col2">
                        <div class="desc">
                            <span class="label label-sm label-primary">房间名称</span>
                            @item.GetApartmentRoom().Name &nbsp;
                            <span class="label label-sm bg-green-haze">住户姓名</span>
                            @item.InhabitantName &nbsp;
                            <span class="label label-sm bg-green-jungle">部门</span>
                            @item.InhabitantDepartment
                        </div>
                    </div>
                </div>
            </div>
            <div class="col2">
                <div class="date">
                    @item.ExpireDate.ToDateString()
                </div>
            </div>
        </li>
    }
</ul>
