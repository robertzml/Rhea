@model Rhea.Model.Apartment.ExchangeTransaction
@{
    ViewBag.Title = "换房业务";
    Layout = null;
}

<!-- BEGIN PAGE HEADER-->
<h3 class="page-title">
    @ViewBag.Title
</h3>
<div class="page-bar">
    <ul class="page-breadcrumb">
        <li>
            <i class="fa fa-home"></i>
            <a href="@Url.Action("Index", new { area = "Apartment", controller = "Home" })">青教管理</a>
            <i class="fa fa-angle-right"></i>
        </li>
        <li>
            <a href="#">统计汇总</a>
            <i class="fa fa-angle-right"></i>
        </li>
        <li>
            <a href="#">@ViewBag.Title</a>
        </li>
    </ul>
</div>
<!-- END PAGE HEADER-->
<!-- BEGIN PAGE CONTENT-->
<div class="row">
    <div class="col-md-12">
        <div class="portlet box green">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-th"></i>换房业务信息
                </div>
                <div class="tools">
                    <a href="javascript:;" class="collapse">
                    </a>
                    <a href="javascript:;" class="reload">
                    </a>
                    <a href="javascript:;" class="remove">
                    </a>
                </div>
            </div>
            <div class="portlet-body">
                <div class="row">
                    <div class="col-md-12">
                        <table class="table table-bordered table-striped table-hover">
                            <thead>
                                <tr>
                                    <th style="width:20%;">属性</th>
                                    <th>值</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>
                                        @Html.DisplayNameFor(model => model.Type)
                                    </td>
                                    <td>
                                        @{
                                            var type = (LogType)Model.Type;
                                            @type.DisplayName();
                                        }
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        @Html.DisplayNameFor(model => model.Time)
                                    </td>
                                    <td>
                                        @Model.Time.ToDateTimeString()
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        @Html.DisplayNameFor(model => model.UserName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(model => model.UserName)
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        @Html.DisplayNameFor(model => model.OldRoomName)
                                    </td>
                                    <td>
                                        <a href="@Url.Action("Details", new { controller = "Room", id = Model.OldRoomId })" class="ajaxify">@Model.OldRoomName</a>
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        @Html.DisplayNameFor(model => model.NewRoomName)
                                    </td>
                                    <td>
                                        <a href="@Url.Action("Details", new { controller = "Room", id = Model.NewRoomName })" class="ajaxify">@Model.NewRoomName</a>
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        @Html.DisplayNameFor(model => model.InhabitantName)
                                    </td>
                                    <td>
                                        <a href="@Url.Action("Details", new { controller = "Inhabitant", id = Model.InhabitantId })" class="ajaxify">@Model.InhabitantName</a>
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        新居住记录
                                    </td>
                                    <td>
                                        <a href="@Url.Action("Details", new { controller = "ResideRecord", id = Model.ResideRecordId })" class="ajaxify">查看新居住记录</a>
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        原居住记录
                                    </td>
                                    <td>
                                        <a href="@Url.Action("Details", new { controller = "ResideRecord", id = Model.OldResideRecordId })" class="ajaxify">查看原居住记录</a>
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        @Html.DisplayNameFor(model => model.Remark)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(model => model.Remark)
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>

                <hr />
                <p>
                    <a href="@Url.Action("Index")" class="btn btn-primary ajaxify" role="button"><i class="fa fa-list"></i>&nbsp;回到列表</a>
                </p>
            </div>
        </div>
    </div>
</div>
<!-- END PAGE CONTENT-->
