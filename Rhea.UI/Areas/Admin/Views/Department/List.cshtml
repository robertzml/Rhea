@model IEnumerable<Rhea.Model.Personnel.Department>
@{
    ViewBag.Title = "部门列表";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="box">
    <div class="box-header well" data-original-title>
        <h2>
            <i class="icon-tasks"></i>@ViewBag.Title</h2>
    </div>

    <div class="box-content">
        <table id="department-list" class="table table-striped table-bordered bootstrap-datatable datatable">
            <thead>
                <tr>
                    <th>
                        ID
                    </th>
                    <th>
                        部门名称
                    </th>
                    <th>
                        部门类型
                    </th>                    
                    <th>
                        操作
                    </th>
                </tr>
            </thead>
            <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>
                    @{
                        DepartmentType t = (DepartmentType)item.Type;
                        @t.DisplayName();
                    } 
                    </td>               
                    <td>
                        <a class="btn btn-success btn-small" href="@Url.Action("Details", new { controller = "Department", id = item.Id, area = "Admin" })"><i class="icon-zoom-in icon-white"></i>查看</a> 
                        <a class="btn btn-warning btn-small" href="@Url.Action("Edit", new { controller = "Department", id = item.Id, area = "Admin" })"><i class="icon-edit icon-white"></i>编辑</a> 
                        <a class="btn btn-danger btn-small" href="@Url.Action("Delete", new { controller = "Department", id = item.Id, area = "Admin" })"><i class="icon-remove icon-white"></i>删除</a>
                    </td>
                </tr>
            }
            </tbody>
        </table>

        <p>
            <a class="btn btn-primary" href="@Url.Action("Create", new { controller = "Department", area = "Admin" })"><i class="icon-plus icon-white"></i>添加部门</a> 
        </p>
    </div>
</div>

<script type="text/javascript">
    $(function () {
        var dom = $('table#department-list');
        initDataTable(dom);

        var menu = $('a#department-manage');
        menuNavActive(menu);
    });
</script>
