                                <tr>
                                    <td>
                                        @Html.DisplayNameFor(model => model.ResearchBonusArea)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(model => model.ResearchBonusArea)
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        @Html.DisplayNameFor(model => model.ExperimentBonusArea)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(model => model.ExperimentBonusArea)
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        @Html.DisplayNameFor(model => model.AdjustArea)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(model => model.AdjustArea)
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    }
                    else
                    {
                    <div class="tab-pane" id="scale">
                        <table class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th style="width:180px">
                                        属性
                                    </th>
                                    <th>
                                        值
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>
                                        @Html.DisplayNameFor(model => model.PresidentCount)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(model => model.PresidentCount)
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        @Html.DisplayNameFor(model => model.VicePresidentCount)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(model => model.VicePresidentCount)
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        @Html.DisplayNameFor(model => model.ChiefCount)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(model => model.ChiefCount)
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        @Html.DisplayNameFor(model => model.ViceChiefCount)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(model => model.ViceChiefCount)
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        @Html.DisplayNameFor(model => model.MemberCount)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(model => model.MemberCount)
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    }
                </div>
            </div>
        </div>

        <p>
            <a class="btn btn-success" href="@Url.Action("List", new { controller = "Department", area = "Admin" })"><i class="icon-list icon-white"></i> 部门列表</a> 
            <a class="btn btn-warning" href="@Url.Action("Edit", new { controller = "Department", id = Model.Id, area = "Admin" })"><i class="icon-edit icon-white"></i> 编辑</a> 
            <a class="btn btn-danger" href="@Url.Action("Delete", new { controller = "Department", id = Model.Id, area = "Admin" })"><i class="icon-remove icon-white"></i> 删除</a>
        </p>
    </div>
</div>

@section scripts {
<script type="text/javascript">
    $(function () {
        var menu = $('a#department-manage');
        menuNavActive(menu);

        $('#myTab a:first').tab('show');
        $('#myTab a').click(function (e) {
            e.preventDefault();
            $(this).tab('show');
        });
    });
</script>
}