                                        @Model.SubjectTypeName()
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        @Html.DisplayNameFor(model => model.FactorK1)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(model => model.FactorK1)
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        @Html.DisplayNameFor(model => model.FactorK3)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(model => model.FactorK3)
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <div class="tab-pane" id="research">
                        <table class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th style="width:180px">
                                        属性
                                    </th>
                                    <th>
                                        值
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>
                                        @Html.DisplayNameFor(model => model.LongitudinalFunds)
                                    </td>
