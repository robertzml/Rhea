@model Rhea.Model.Personnel.Department

@{
    ViewBag.Title = "部门删除";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="box">
    <div class="box-header well" data-original-title>
        <h2>
            <i class="icon-th-list"></i>部门信息</h2>
    </div>

    <div class="box-content">
        <div class="page-header">
            <h2>
                确认是否删除该信息?</h2>
        </div>

        <div class="row-fluid">
            <div class="span12">
                <fieldset>
                    <table class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th style="width:100px">
                                    属性
                                </th>
                                <th>
                                    值
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>
                                    @Html.DisplayNameFor(model => model.Id)
                                </td>
                                <td>
                                    @Model.Id
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    @Html.DisplayNameFor(model => model.Name)
                                </td>
                                <td>
                                    @Model.Name
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    @Html.DisplayNameFor(model => model.ShortName)
                                </td>
                                <td>
                                    @Model.ShortName
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    @Html.DisplayNameFor(model => model.ImageUrl)
                                </td>
                                <td>
                                    @Model.ImageUrl
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    @Html.DisplayNameFor(model => model.LogoUrl)
                                </td>
                                <td>
                                    @Model.LogoUrl
                                </td>
                            </tr>                            
                            <tr>
                                <td>
                                    @Html.DisplayNameFor(model => model.Type)
                                </td>
                                <td>
                                    @(((DepartmentType)Model.Type).DisplayName())
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    @Html.DisplayNameFor(model => model.Description)
                                </td>
                                <td>
                                    @Model.Description
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </fieldset>

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(model => model.Id)
                    <div class="form-actions">
                        <button type="submit" class="btn btn-danger">删除</button>
                        <a class="btn" href="@Url.Action("Details", new { controller = "Department", id = Model.Id, area = "Admin" })">取消</a> 
                        <a class="btn" href="@Url.Action("List", new { controller = "Department", area = "Admin" })">回到列表</a>                     
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    $(function () {
        var menu = $('a#department-manage');
        menuNavActive(menu);
    });
</script>
