@model IEnumerable<Rhea.Model.Log>

@{
    ViewBag.Title = "归档历史";
    Layout = "~/Areas/Admin/Views/Shared/_Layout_Department.cshtml";
}


<div class="box">
    <div class="box-header well" data-original-title>
        <h2>
            <i class="icon-tasks"></i>@ViewBag.Title</h2>
    </div>

    <div class="box-content">
        <div class="row-fluid">
            <div class="span12">
                <table id="log-list" class="table table-striped table-bordered bootstrap-datatable datatable">
                    <thead>
                        <tr>
                            <th>
                                标题
                            </th>
                            <th>
                                内容
                            </th>
                            <th>
                                操作时间
                            </th>
                            <th>
                                操作用户
                            </th>
                            <th>
                                日志类型
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @item.Title
                            </td>
                            <td>
                                @item.Content
                            </td>
                            <td>
                                @item.Time
                            </td>
                            <td>
                                @item.UserName
                            </td>
                            <td>
                                @item.Type
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section scripts {
<script type="text/javascript">
    $(function () {
        var menu = $('a#archive-list');
        menuNavActive(menu);
    });
</script>
}
