@model Rhea.Model.Personnel.Department

@{
    ViewBag.Title = "部门添加";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="box">
    <div class="box-header well" data-original-title>
        <h2>
            <i class="icon-th-list"></i>部门信息</h2>
    </div>

    <div class="box-content">
        <div class="row-fluid">
            <div class="span12">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)
                <fieldset>
                    <legend>部门添加</legend>                
            
                    <table class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th style="width: 100px">
                                    属性
                                </th>
                                <th>
                                    值
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>
                                    @Html.DisplayNameFor(model => model.Id)
                                </td>
                                <td>
                                    @Html.EditorFor(model => model.Id)
                                    @Html.ValidationMessageFor(model => model.Id)
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    @Html.DisplayNameFor(model => model.Name)
                                </td>
                                <td>
                                    @Html.EditorFor(model => model.Name)
                                    @Html.ValidationMessageFor(model => model.Name)
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    @Html.DisplayNameFor(model => model.ShortName)
                                </td>
                                <td>
                                    @Html.EditorFor(model => model.ShortName)
                                    @Html.ValidationMessageFor(model => model.ShortName)
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    @Html.DisplayNameFor(model => model.ImageUrl)
                                </td>
                                <td>
                                    @Html.EditorFor(model => model.ImageUrl)
                                    @Html.ValidationMessageFor(model => model.ImageUrl)
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    @Html.DisplayNameFor(model => model.LogoUrl)
                                </td>
                                <td>
                                    @Html.EditorFor(model => model.LogoUrl)
                                    @Html.ValidationMessageFor(model => model.LogoUrl)
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    @Html.DisplayNameFor(model => model.Type)
                                </td>
                                <td>
                                    @Html.EditorFor(model => model.Type)
                                    @Html.ValidationMessageFor(model => model.Type)
                                </td>
                            </tr>                           
                            <tr>
                                <td>
                                    @Html.DisplayNameFor(model => model.Description)
                                </td>
                                <td>
                                    @Html.EditorFor(model => model.Description)
                                    @Html.ValidationMessageFor(model => model.Description)
                                </td>
                            </tr>
                        </tbody>
                    </table>
            
                    <div class="form-actions">
                        <button type="submit" class="btn btn-primary">保存</button>                       
                        <a class="btn" href="@Url.Action("List", new { controller = "Department", area = "Admin" })">回到列表</a> 
                    </div>
                </fieldset>
            }
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    $(function () {
        var menu = $('a#department-manage');
        menuNavActive(menu);
    });
</script>
