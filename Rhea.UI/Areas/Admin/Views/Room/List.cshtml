@model IEnumerable<Rhea.Model.Estate.Room>

@{
    ViewBag.Title = "房间列表";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="box">
    <div class="box-header well" data-original-title>
        <h2>
            <i class="icon-tasks"></i>@ViewBag.Title</h2>
    </div>

    <div class="box-content">
        <table id="room-list" class="table table-striped table-bordered bootstrap-datatable datatable">
            <thead>
                <tr>
                    <th>
                        ID
                    </th>
                    <th>
                        房间编号
                    </th>
                    <th>
                        房间名称
                    </th>
                    <th>
                        楼层
                    </th>
                    <th>
                        建筑面积 (m<sup>2</sup>)
                    </th>
                    <th>
                        使用面积 (m<sup>2</sup>)
                    </th>    
                    <th>
                        功能
                    </th>
                    <th>
                        操作
                    </th>
                </tr>
            </thead>
            <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Number</td>
                    <td>@item.Name</td>
                    <td>@item.Floor</td>
                    <td>@item.BuildArea</td>
                    <td>@item.UsableArea</td>
                    <td>@item.Function.Property</td>
                    <td>
                        <a class="btn btn-success btn-small" href="@Url.Action("Details", new { controller = "Room", id = item.Id, area = "Admin" })"><i class="icon-zoom-in icon-white"></i>查看</a> 
                        <a class="btn btn-warning btn-small" href="@Url.Action("Edit", new { controller = "Room", id = item.Id, area = "Admin" })"><i class="icon-edit icon-white"></i>编辑</a> 
                        <a class="btn btn-danger btn-small" href="@Url.Action("Delete", new { controller = "Room", id = item.Id, area = "Admin" })"><i class="icon-remove icon-white"></i>删除</a>
                    </td>
                </tr>
            }
            </tbody>
        </table>

        <p>
            <a class="btn btn-success" href="@Url.Action("List", new { controller = "Room", area = "Admin" })"><i class="icon-chevron-left icon-white"></i>所有房间</a> 
            <a class="btn btn-primary" href="@Url.Action("Create", new { controller = "Room", area = "Admin" })"><i class="icon-plus icon-white"></i>添加房间</a> 
        </p>
    </div>
</div>

<script type="text/javascript">
    $(function () {
        var dom = $('table#room-list');
        initDataTable(dom);

        var menu = $('a#room-manage');
        menuNavActive(menu);
    });
</script>

