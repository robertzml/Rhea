@model Rhea.Model.Estate.Room
@using Rhea.Business

@{
    ViewBag.Title = "房间信息";
    Layout = "~/Areas/Admin/Views/Shared/_Layout_Estate.cshtml";
}

<div class="box">
    <div class="box-header well" data-original-title>
        <h2>
            <i class="icon-th-list"></i>房间信息</h2>
    </div>

    <div class="box-content">
        <div class="page-header">
            <h1>
                @Model.Name <small>Id: @Model.Id</small></h1>
        </div>

        <div class="row-fluid">
            <div class="span12">
                <ul class="nav nav-tabs" id="myTab">
                    <li class="active"><a href="#info">基础信息</a></li>
                    <li><a href="#additional">附加信息</a></li>
                </ul>

                <div id="myTabContent" class="tab-content">
                    <div class="tab-pane active" id="info">
                        <table class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th style="width:20%">
                                        属性
                                    </th>
                                    <th style="width:80%">
                                        值
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>
                                        @Html.DisplayNameFor(model => model.Number)
                                    </td>
                                    <td>
                                        @Model.Number
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        @Html.DisplayNameFor(model => model.Name)
                                    </td>
                                    <td>
                                        @Model.Name
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        @Html.DisplayNameFor(model => model.Floor)
                                    </td>
                                    <td>
                                        @Model.Floor
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        @Html.DisplayNameFor(model => model.Span)
                                    </td>
