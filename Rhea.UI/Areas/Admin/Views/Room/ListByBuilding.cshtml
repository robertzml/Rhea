@model IEnumerable<Rhea.Model.Estate.Room>

@{
    ViewBag.Title = "房间列表";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-2 col-md-2">
        @Html.Action("Menu", "Estate")
    </div>

    <div class="col-lg-10 col-md-10">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">@ViewBag.Title</h3>
            </div>

            <div class="panel-body">
                <table id="room-list" class="table table-striped table-bordered bootstrap-datatable datatable">
                    <thead>
                        <tr>
                            <th>
                                ID
                            </th>
                            <th>
                                房间编号
                            </th>
                            <th>
                                房间名称
                            </th>
                            <th>
                                楼层
                            </th>
                            <th>
                                建筑面积 (m<sup>2</sup>)
                            </th>
                            <th>
                                使用面积 (m<sup>2</sup>)
                            </th>
                            <th>
                                部门
                            </th>
                            <th>
                                功能
                            </th>
                            <th>
                                操作
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.RoomId</td>
                                <td>@item.Number</td>
                                <td>@item.Name</td>
                                <td>@item.Floor</td>
                                <td>@item.BuildArea</td>
                                <td>@item.UsableArea</td>
                                <td></td>
                                <td></td>
                                <td>
                                    <a class="btn btn-success btn-sm" href="@Url.Action("Details", new { controller = "Room", id = item.RoomId })"><span class="glyphicon glyphicon-zoom-in"></span> 查看</a>
                                    <a class="btn btn-warning btn-sm" href="@Url.Action("Edit", new { controller = "Room", id = item.RoomId })"><span class="glyphicon glyphicon-edit"></span> 编辑</a>
                                    <a class="btn btn-danger btn-sm" href="@Url.Action("Delete", new { controller = "Room", id = item.RoomId })"><span class="glyphicon glyphicon-remove"></span> 删除</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

                <hr />
                <p>
                    <a class="btn btn-success" href="@Url.Action("Details", new { controller = "Building", id = ViewBag.BuildingId, area = "Admin" })"><span class="glyphicon glyphicon-chevron-left"></span>楼宇</a>
                    <a class="btn btn-primary" href="@Url.Action("Create", new { controller = "Room", area = "Admin" })"><span class="glyphicon glyphicon-plus"></span>添加房间</a>
                </p>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script type="text/javascript">
        $(function () {
            var dom = $('table#room-list');
            var oTable = initDataTable(dom);

            menuNavActive($('a#room-manage'));
        })
    </script>
}