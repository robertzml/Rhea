@model IEnumerable<Rhea.Model.Account.UserProfile>

@{
    ViewBag.Title = "用户列表";
    Layout = "~/Areas/Admin/Views/Shared/_Layout_Account.cshtml";
}


<div class="box">
    <div class="box-header well" data-original-title>
        <h2>
            <i class="icon-tasks"></i>@ViewBag.Title</h2>
    </div>

    <div class="box-content">
        <table id="user-list" class="table table-striped table-bordered bootstrap-datatable datatable">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.UserId)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.UserName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.UserGroupName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.LastLoginTime)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Status)
                    </th>
                    <th>
                        操作
                    </th>
                </tr>
            </thead>
            <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.UserId</td>
                    <td>@item.UserName</td>
                    <td>@item.Name</td>
                    <td>@item.UserGroupName</td>
                    <td>@item.LastLoginTime</td>
                    <td>
                    @if (item.Status == 0)
                    {
                        <span class="label label-success">正常</span>
                    }
                    else if (item.Status == 1)
                    {
                        <span class="label label-inverse">已删除</span>
                    }
                    else
                    {
                        <span class="label label-warning">禁用</span>
                    }
                    </td>
                    <td>
                        <a class="btn btn-success btn-small" href="@Url.Action("Details", new { controller = "Account", id = item.Id, area = "Admin" })"><i class="icon-zoom-in icon-white"></i>查看</a> 
                        <a class="btn btn-warning btn-small" href="@Url.Action("Edit", new { controller = "Account", id = item.Id, area = "Admin" })"><i class="icon-edit icon-white"></i>编辑</a>
                    </td>
                </tr>
            }
            </tbody>
        </table>

        <p>
            <a class="btn btn-primary" href="@Url.Action("Create", new { controller = "Account", area = "Admin" })"><i class="icon-plus icon-white"></i>添加用户</a> 
            <a class="btn btn-primary" href="@Url.Action("CreateUnity", new { controller = "Account", area = "Admin" })"><i class="icon-plus icon-white"></i>添加统一身份认证用户</a> 
        </p>
    </div>
</div>

@section scripts {
<script type="text/javascript">
    $(function () {
        var menu = $('a#user-manage');
        menuNavActive(menu);

        var dom = $('table#user-list');
        initDataTable(dom);
    });
</script>
}