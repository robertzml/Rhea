@model Rhea.Model.Account.UserProfile

@{
    ViewBag.Title = "用户编辑";
    Layout = "~/Areas/Admin/Views/Shared/_Layout_Account.cshtml";
}


<div class="box">
    <div class="box-header well" data-original-title>
        <h2>
            <i class="icon-tasks"></i>用户信息</h2>
    </div>
    <div class="box-content">
        <div class="row-fluid">
            <div class="span12">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)
                <fieldset>
                    <legend>@ViewBag.Title</legend>
                 
                    @Html.HiddenFor(model => model.Id)

                    <table class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th style="width: 20%">
                                    属性
                                </th>
                                <th style="width: 80%">
                                    值
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>
                                    @Html.DisplayNameFor(model => model.UserId)
                                </td>
                                <td>
                                    @Html.TextBoxFor(model => model.UserId, new { @readonly = "readonly" })
                                    @Html.ValidationMessageFor(model => model.UserId)
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    @Html.DisplayNameFor(model => model.UserName)
                                </td>
                                <td>
                                    @Html.TextBoxFor(model => model.UserName, new { @readonly = "readonly" })
                                    @Html.ValidationMessageFor(model => model.UserName)
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    @Html.DisplayNameFor(model => model.Password)
                                </td>
                                <td>
                                    <input type="password" name="Password" id="Password" />
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    @Html.DisplayNameFor(model => model.ManagerGroupId)
                                </td>
                                <td>
                                    @Html.EditorFor(model => model.ManagerGroupId)
                                    @Html.ValidationMessageFor(model => model.ManagerGroupId)
                                </td>
                            </tr>                            
                            <tr>
                                <td>
                                    @Html.DisplayNameFor(model => model.UserGroupId)
                                </td>
                                <td>
                                    @Html.EditorFor(model => model.UserGroupId)
                                    @Html.ValidationMessageFor(model => model.UserGroupId)
                                </td>
                            </tr>
                        </tbody>
                    </table>

                    <div class="form-actions">
                        <button type="submit" class="btn btn-primary">保存</button>
                        <a class="btn" href="@Url.Action("Details", new { controller = "Account", id = Model.Id, area = "Admin" })">取消</a> 
                        <a class="btn" href="@Url.Action("List", new { controller = "Account", area = "Admin" })">回到列表</a>
                    </div>
                </fieldset>
            }
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    $(function () {
        var menu = $('a#user-manage');
        menuNavActive(menu);
    });
</script>


