@model IEnumerable<Rhea.Model.Log>

@{
    ViewBag.Title = "日志列表";
    Layout = "~/Areas/Admin/Views/Shared/_Layout_Advance.cshtml";
}

<div class="box">
    <div class="box-header well" data-original-title>
        <h2>
            <i class="icon-tasks"></i>@ViewBag.Title</h2>
    </div>

    <div class="box-content">
        <table id="log-tlist" class="table table-striped table-bordered bootstrap-datatable datatable">
            <thead>
                <tr>
                    <th>
                        标题
                    </th>
                    <th>
                        内容
                    </th>
                    <th>
                        操作时间
                    </th>
                    <th>
                        操作用户
                    </th>
                    <th>
                        日志类型
                    </th>
                    <th style="width:80px;">
                        操作
                    </th>
                </tr>
            </thead>
            <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.Title
                    </td>
                    <td>
                        @item.Content
                    </td>
                    <td>
                        @item.Time
                    </td>
                    <td>
                        @item.UserName
                    </td>
                    <td>
                        @item.Type
                    </td>
                    <td>
                        <a class="btn btn-success btn-small" href="@Url.Action("LogDetails", new { controller = "Advance", id = item._id.ToString(), area = "Admin" })"><span class="icon-zoom-in icon-white"></span> 查看</a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>

@section scripts {
<script type="text/javascript">
    $(function () {
        var menu = $('a#log-list');
        menuNavActive(menu);

        var dom = $('table#log-tlist');
        initDataTable(dom);
    });
</script>
}