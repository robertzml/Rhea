@model Rhea.Model.MapPoint

@{
    ViewBag.Title = "地图点详细";
    Layout = "~/Areas/Admin/Views/Shared/_Layout_Advance.cshtml";
}


<div class="box">
    <div class="box-header well" data-original-title>
        <h2><i class="icon-tasks"></i>@ViewBag.Title</h2>
    </div>

    <div class="box-content">
        <div class="page-header">
            <h2>
                @Model.Name <small>Id: @Model._id</small></h2>
        </div>

        <div class="row-fluid">
            <div class="span12">
                <table class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th style="width:20%;">
                                属性
                            </th>
                            <th style="width:80%;">
                                值
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>
                                @Html.DisplayNameFor(model => model._id)
                            </td>
                            <td>
                                @Model._id
                            </td>
                        </tr>
                        <tr>
                            <td>
                                @Html.DisplayNameFor(model => model.TargetId)
                            </td>
                            <td>
                                @Model.TargetId
                            </td>
                        </tr>
                        <tr>
                            <td>
                                @Html.DisplayNameFor(model => model.TargetType)
                            </td>
                            <td>
                                @Model.TargetType
                            </td>
                        </tr>
                        <tr>
                            <td>
                                @Html.DisplayNameFor(model => model.Name)
                            </td>
                            <td>
                                @Model.Name
                            </td>
                        </tr>
                        <tr>
                            <td>
                                @Html.DisplayNameFor(model => model.Content)
                            </td>
                            <td>
                                @Model.Content
                            </td>
                        </tr>
                        <tr>
                            <td>
                                @Html.DisplayNameFor(model => model.PointX)
                            </td>
                            <td>
                                @Model.PointX
                            </td>
                        </tr>
                        <tr>
                            <td>
                                @Html.DisplayNameFor(model => model.PointY)
                            </td>
                            <td>
                                @Model.PointY
                            </td>
                        </tr>
                        <tr>
                            <td>
                                @Html.DisplayNameFor(model => model.Zoom)
                            </td>
                            <td>
                                @Model.Zoom
                            </td>
                        </tr>
                        <tr>
                            <td>
                                @Html.DisplayNameFor(model => model.Pin)
                            </td>
                            <td>
                                @Model.Pin
                            </td>
                        </tr>
                        <tr>
                            <td>
                                @Html.DisplayNameFor(model => model.Symbol)
                            </td>
                            <td>
                                @Model.Symbol
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>

        <p>
            <a class="btn btn-success" href="@Url.Action("MapPointList", new { controller = "Advance", area = "Admin" })"><i class="icon-list icon-white"></i> 地图点列表</a>
            <a class="btn btn-warning" href="@Url.Action("MapPointEdit", new { controller = "Advance", id = Model._id.ToString(), area = "Admin" })"><i class="icon-edit icon-white"></i> 编辑</a>
        </p>
    </div>
</div>

@section scripts {
<script type="text/javascript">
    $(function () {
        var menu = $('a#map-point-list');
        menuNavActive(menu);
    });
</script>
}
