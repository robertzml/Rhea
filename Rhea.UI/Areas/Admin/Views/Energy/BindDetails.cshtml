@model Rhea.Model.Energy.RoomMap

@{
    ViewBag.Title = "绑定信息";
    Layout = "~/Areas/Admin/Views/Shared/_Layout_Energy.cshtml";
}

<div class="box">
    <div class="box-header well" data-original-title>
        <h2><i class="icon-tasks"></i>@ViewBag.Title</h2>
    </div>

    <div class="box-content">
        <div class="page-header">
            <h2>
                房间
            </h2>
        </div>

        <div class="row-fluid">
            <div class="span12">
                <table class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th style="width:20%;">
                                属性
                            </th>
                            <th style="width:80%;">
                                值
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>
                                @Html.DisplayNameFor(model => model.RoomId)
                            </td>
                            <td>
                                @Model.RoomId
                            </td>
                        </tr>
                        <tr>
                            <td>
                                @Html.DisplayNameFor(model => model.NodeId)
                            </td>
                            <td>
                                @Model.NodeId
                            </td>
                        </tr>
                        <tr>
                            <td>
                                @Html.DisplayNameFor(model => model.szOPCNode)
                            </td>
                            <td>
                                @Model.szOPCNode
                            </td>
                        </tr>
                        <tr>
                            <td>
                                @Html.DisplayNameFor(model => model.Multiplying)
                            </td>
                            <td>
                                @Model.Multiplying
                            </td>
                        </tr>
                        <tr>
                            <td>
                                @Html.DisplayNameFor(model => model.Status)
                            </td>
                            <td>
                                @Model.Status
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    
        <p>
            <a class="btn btn-success" href="@Url.Action("BindList", new { controller = "Energy", area = "Admin" })"><i class="icon-list icon-white"></i> 回到列表</a>
            <a class="btn btn-warning" href="@Url.Action("Edit", new { controller = "Energy", roomId = Model.RoomId, area = "Admin" })"><i class="icon-edit icon-white"></i> 编辑</a>
            <a class="btn btn-danger" href="@Url.Action("Delete", new { controller = "Energy", roomId = Model.RoomId, area = "Admin" })"><i class="icon-remove icon-white"></i> 删除</a>
        </p>
    </div>
</div>

@section Scripts {
    <script type="text/javascript">
        $(function () {
            var menu = $('a#bind-list');
            menuNavActive(menu);
        });
    </script>
}