@model Rhea.Model.Log

@{
    ViewBag.Title = "日志详细";
    Layout = "~/Areas/Admin/Views/Shared/_Layout_Estate.cshtml";
}

<div class="box">
    <div class="box-header well" data-original-title>
        <h2><i class="icon-tasks"></i>@ViewBag.Title</h2>
    </div>

    <div class="box-content">
        <div class="page-header">
            <h2>
                @Model.Title <small>Id: @Model._id</small></h2>
        </div>

        <div class="row-fluid">
            <div class="span12">
                <table class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th style="width:20%;">
                                属性
                            </th>
                            <th style="width:80%;">
                                值
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>
                                @Html.DisplayNameFor(model => model._id)
                            </td>
                            <td>
                                @Model._id
                            </td>
                        </tr>
                        <tr>
                            <td>
                                @Html.DisplayNameFor(model => model.Title)
                            </td>
                            <td>
                                @Model.Title
                            </td>
                        </tr>
                        <tr>
                            <td>
                                @Html.DisplayNameFor(model => model.Time)
                            </td>
                            <td>
                                @Model.Time
                            </td>
                        </tr>
                        <tr>
                            <td>
                                @Html.DisplayNameFor(model => model.Content)
                            </td>
                            <td>
                                @Model.Content
                            </td>
                        </tr>
                        <tr>
                            <td>
                                @Html.DisplayNameFor(model => model.UserId)
                            </td>
                            <td>
                                @Model.UserId
                            </td>
                        </tr>
                        <tr>
                            <td>
                                @Html.DisplayNameFor(model => model.UserName)
                            </td>
                            <td>
                                @Model.UserName
                            </td>
                        </tr>
                        <tr>
                            <td>
                                @Html.DisplayNameFor(model => model.RelateTime)
                            </td>
                            <td>
                                @Model.RelateTime
                            </td>
                        </tr>
                        <tr>
                            <td>
                                @Html.DisplayNameFor(model => model.Tag)
                            </td>
                            <td>
                                @Model.Tag
                            </td>
                        </tr>
                        <tr>
                            <td>
                                @Html.DisplayNameFor(model => model.Type)
                            </td>
                            <td>
                                @Model.Type
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>

        <p>
            <a class="btn btn-success" href="@Url.Action("LogList", new { controller = "Estate", area = "Admin" })"><i class="icon-list icon-white"></i> 日志列表</a>
        </p>
    </div>
</div>
