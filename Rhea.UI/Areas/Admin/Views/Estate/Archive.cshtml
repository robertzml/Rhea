@model Rhea.UI.Areas.Admin.Models.ArchiveModel
@{
    ViewBag.Title = "归档数据";
    Layout = "~/Areas/Admin/Views/Shared/_Layout_Estate.cshtml";
}

<div class="box">
    <div class="box-header well" data-original-title>
        <h2>
            <i class="icon-tasks"></i>@ViewBag.Title</h2>
    </div>

    <div class="box-content">
        <div class="row-fluid">
            <div class="span12">
            @using (Html.BeginForm("Archive", "Estate", new { area = "Admin" }, FormMethod.Post, new { @class = "form-horizontal" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)

                <fieldset>
                    <legend>归档设置</legend>

                    <div class="control-group">
                        <label class="control-label" for="ArchiveSingle">归档方式</label>
                        <div class="controls">
                            <input type="radio" name="ArchiveSingle" checked="checked" value="1" />单独归档 &nbsp;
                            <input type="radio" name="ArchiveSingle" value="0" />全部归档(包括房产、部门数据)
                        </div>
                    </div>

                    <div class="control-group">
                        <label class="control-label" for="ArchiveType">选择数据</label>
                        <div class="controls">
                            <select name="ArchiveType" id="ArchiveType">
                                <option value="1">校区</option>
                                <option value="2">楼群</option>
                                <option value="3">楼宇</option>
                                <option value="4">房间</option>
                            </select>
                        </div>
                    </div>

                    <div class="control-group">
                        <label class="control-label" for="ArchiveDate">选择日期</label>
                        <div class="controls">
                            @Html.EditorFor(model => model.ArchiveDate)
                            @Html.ValidationMessageFor(model => model.ArchiveDate)
                        </div>
                    </div>

                    <div class="control-group">
                        <label class="control-label" for="ArchiveContent">备注内容</label>
                        <div class="controls">
                            @Html.EditorFor(model => model.ArchiveContent)
                            @Html.ValidationMessageFor(model => model.ArchiveContent)
                        </div>
                    </div>

                    <div class="control-group">
                        <div class="controls">
                            <button type="submit" class="btn btn-primary">保存</button>
                        </div>
                    </div>
                </fieldset>
            }
            </div>
        </div>     
    </div>
</div>

<script type="text/javascript">
    $(function () {
        var menu = $('a#archive-task');
        menuNavActive(menu);

        var arch = $('#ArchiveDate').datepicker({ format: 'yyyy-mm-dd' });
    });
</script>
