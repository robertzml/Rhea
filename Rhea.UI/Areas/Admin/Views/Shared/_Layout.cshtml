@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="zh">
    <head>
        <meta charset="utf-8">
        <title>房产管理系统 - 后台管理</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
        <meta content="width=device-width, initial-scale=1.0" name="viewport">
        
        <link href="@Url.Content("~/Content/bootstrap.css")" type="text/css" rel="stylesheet">
        <style type="text/css">
            body {
                padding-top: 60px;
                padding-bottom: 20px;
            }

            @@media (max-width: 980px) {
            /* Enable use of floated navbar text */
                .navbar-text.pull-right {
                    float: none;
                    padding-left: 5px;
                    padding-right: 5px;
                }
            }
        </style>
        <link href="@Url.Content("~/Content/bootstrap-responsive.css")" type="text/css" rel="stylesheet">
        <link href="@Url.Content("~/Plugins/tables/dataTables/jquery.dataTables.css")" type="text/css" rel="stylesheet" />
        @Styles.Render("~/Content/themes/base/css")
        <link href="@Url.Content("~/Content/layout.css")" type="text/css" rel="stylesheet">
        @Scripts.Render("~/bundles/jquery")
        <!-- HTML5 shim, for IE6-8 support of HTML5 elements -->
        <!--[if lt IE 9]>
            <script src="@Url.Content("~/Scripts/html5shiv.js")"></script>
        <![endif]-->  
    </head>

    <body>
        @Html.Action("Nav", new { controller = "Home", area = "Admin" })

        <div class="container-fluid">
            <div class="row-fluid">
                <div class="span2">
                    @Html.Action("Menu", new { controller = "Home", area = "Admin" })
                </div>

                <div class="span10">
                    @RenderBody()
                </div>
                
            </div><!--/row-->

            <hr>

            <footer>
                <p>&copy; Jiangnan 2013</p>
            </footer>

        </div><!--/.fluid-container-->

        <!-- Placed scripts at the end of the document so the pages load faster -->
        @Scripts.Render("~/bundles/jqueryval")
        @Scripts.Render("~/bundles/jqueryui")
        @Scripts.Render("~/bundles/bootstrap")
        @Scripts.Render("~/bundles/noty")
        <script src="@Url.Content("~/Scripts/jquery.dataTables.min.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/rhea.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/function.js")" type="text/javascript"></script>
        @if (TempData["Message"] != null && !String.IsNullOrEmpty(TempData["Message"].ToString()))
        {
            <script type="text/javascript">
                showMessage('@TempData["Message"]');
            </script>
        }        
        @RenderSection("scripts", required: false)
    </body>
</html>

