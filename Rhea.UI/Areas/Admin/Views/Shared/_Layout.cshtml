<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@AdminAreaRegistration.AreaTitle - @ViewBag.Title</title>
    @Styles.Render("~/Content/bootstrap3")
    @Styles.Render("~/Content/admin")
    @Styles.Render("~/Content/datatable")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>

    @Html.Action("Nav", new { controller = "Home", area = "Admin" })

    <div class="container-full body-content" >
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - 我的 ASP.NET 应用程序</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap3")
    @Scripts.Render("~/bundles/datatable")
    <script src="@Url.Content("~/Scripts/function.js")" type="text/javascript"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
