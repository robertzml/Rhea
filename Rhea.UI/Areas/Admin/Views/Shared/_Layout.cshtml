<!DOCTYPE html>

<html lang="zh-cn">
<head>   
    <meta charset="utf-8">
    <title>@ViewBag.Title - 后台管理</title>
    <meta name="description" content="description">
    <meta name="author" content="DevOOPS">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    @Styles.Render("~/Content/bootstrap")
    @Styles.Render("~/Plugin/jqueryui")
    @Styles.Render("~/Content/fontawesome")
    <link href="/plugins/select2/select2.css" rel="stylesheet">
    @Styles.Render("~/Content/admin")
    <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
            <script src="@Url.Content("~/Scripts/html5shiv.js")"></script>
    <![endif]-->
    @Scripts.Render("~/bundles/jquery")
</head>
<body>
    <!--Start Header-->
    <div id="modalbox">
        <div class="devoops-modal">
            <div class="devoops-modal-header">
                <div class="modal-header-name">
                    <span>Basic table</span>
                </div>
                <div class="box-icons">
                    <a class="close-link">
                        <i class="fa fa-times"></i>
                    </a>
                </div>
            </div>
            <div class="devoops-modal-inner">
            </div>
            <div class="devoops-modal-bottom">
            </div>
        </div>
    </div>
    <header class="navbar">
        <div class="container-fluid expanded-panel">
            <div class="row">
                <div id="logo" class="col-xs-12 col-sm-2 col-lg-2">
                    <a href="@Url.Action("Index", "Home")">房产系统后台管理</a>
                </div>
                <div id="top-panel" class="col-xs-12 col-sm-10 col-lg-10">
                    <div class="row">
                        <div class="col-xs-2 col-sm-3">
                            <a href="#" class="show-sidebar">
                                <i class="fa fa-bars"></i>
                            </a>
                            <div id="search" class="hidden-xs">
                                <input type="text" placeholder="search" />
                                <i class="fa fa-search"></i>
                            </div>
                        </div>
                        <div class="col-xs-6 col-sm-4">
                            <ul id="top-nav" class="nav nav-pills">
                                <li><a href="@Url.Action("Index", "Estate")" id="estate-nav">房产管理</a></li>
                                <li><a href="#">人事管理</a></li>
                                <li><a href="@Url.Action("Index", "Advance")" id="advance-nav">高级管理</a></li>
                            </ul>
                        </div>
                        <div class="col-xs-4 col-sm-5 top-panel-right">
                            <ul class="nav navbar-nav pull-right panel-menu">
                                <li class="hidden-xs">
                                    <a href="index.html" class="modal-link">
                                        <i class="fa fa-bell"></i>
                                        <span class="badge">7</span>
                                    </a>
                                </li>
                                <li class="hidden-xs">
                                    <a href="ajax/page_messages.html" class="ajax-link">
                                        <i class="fa fa-envelope"></i>
                                        <span class="badge">7</span>
                                    </a>
                                </li>
                                <li class="dropdown">
                                    <a href="#" class="dropdown-toggle account" data-toggle="dropdown">
                                        <div class="avatar">
                                            <img src="/Images/avatar.png" class="img-rounded" alt="avatar" />
                                        </div>
                                        <i class="fa fa-angle-down pull-right"></i>
                                        <div class="user-mini pull-right">
                                            <span class="welcome">Welcome,</span>
                                            <span>Robert</span>
                                        </div>
                                    </a>
                                    <ul class="dropdown-menu">
                                        <li>
                                            <a href="#">
                                                <i class="fa fa-user"></i>
                                                <span class="hidden-sm text">Profile</span>
                                            </a>
                                        </li>
                                        <li>
                                            <a href="ajax/page_messages.html" class="ajax-link">
                                                <i class="fa fa-envelope"></i>
                                                <span class="hidden-sm text">Messages</span>
                                            </a>
                                        </li>
                                        <li>
                                            <a href="ajax/gallery_simple.html" class="ajax-link">
                                                <i class="fa fa-picture-o"></i>
                                                <span class="hidden-sm text">Albums</span>
                                            </a>
                                        </li>
                                        <li>
                                            <a href="ajax/calendar.html" class="ajax-link">
                                                <i class="fa fa-tasks"></i>
                                                <span class="hidden-sm text">Tasks</span>
                                            </a>
                                        </li>
                                        <li>
                                            <a href="#">
                                                <i class="fa fa-cog"></i>
                                                <span class="hidden-sm text">Settings</span>
                                            </a>
                                        </li>
                                        <li>
                                            <a href="#">
                                                <i class="fa fa-power-off"></i>
                                                <span class="hidden-sm text">Logout</span>
                                            </a>
                                        </li>
                                    </ul>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </header>
    <!--End Header-->
    <!--Start Container-->
    <div id="main" class="container-fluid">
       @RenderBody()
    </div>
    <!--End Container-->


    <!-- plugin scripts -->
    @Scripts.Render("~/bundles/jqueryui")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/datatables")
    <script src="@Url.Content("~/Scripts/function.js")" type="text/javascript"></script>
    <!-- All functions for this theme + document.ready processing -->
    <script src="~/Scripts/admin.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
