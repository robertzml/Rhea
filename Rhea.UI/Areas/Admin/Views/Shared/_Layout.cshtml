@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="zh">
    <head>
        <meta charset="utf-8">
        <title>房产管理系统 - 后台管理</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
        <meta content="width=device-width, initial-scale=1.0" name="viewport">
        
        <!-- Bootstrap core CSS -->
        <link href="@Url.Content("~/Plugins/bootstrap3/css/bootstrap.min.css")" rel="stylesheet">
        <link href="@Url.Content("~/Plugins/bootstrap3/css/bootstrap-theme.min.css")" rel="stylesheet">
                
        <!-- plugin CSS -->      
        <link href="@Url.Content("~/Plugins/tables/dataTables/jquery.dataTables.css")" type="text/css" rel="stylesheet" />
        <link href="@Url.Content("~/Plugins/forms/datepicker/datepicker.css")" type="text/css" rel="stylesheet" />        

        <!-- Custom styles -->
        <link href="@Url.Content("~/Content/admin.css")" rel="stylesheet">

        <script src="@Url.Content("~/Scripts/jquery-2.0.3.min.js")" type="text/javascript"></script>      
    </head>

    <body>
        @Html.Action("Nav", new { controller = "Home", area = "Admin" })

        <div class="container">
            <div class="row">                
                @RenderBody()
            </div><!--/row-->

            <hr>

            <footer>
                <p>&copy; Jiangnan 2013</p>
            </footer>

        </div><!-- /container -->

        <!-- Placed scripts at the end of the document so the pages load faster -->
        <script src="@Url.Content("~/Plugins/bootstrap3/js/bootstrap.min.js")" type="text/javascript" ></script>
        @Scripts.Render("~/bundles/jqueryval")        
        @Scripts.Render("~/bundles/noty")
        @Scripts.Render("~/bundles/datatable")
        <script src="@Url.Content("~/Plugins/forms/datepicker/bootstrap-datepicker.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/rhea.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/function.js")" type="text/javascript"></script>
        @if (TempData["Message"] != null && !String.IsNullOrEmpty(TempData["Message"].ToString()))
        {
            <script type="text/javascript">
                showMessage('@TempData["Message"]');
            </script>
        }        
        @RenderSection("scripts", required: false)
    </body>
</html>

