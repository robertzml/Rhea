@model string
@using Rhea.Business.Estate

<select id="RoomStatus" name="RoomStatus">
    <option value="">-- 请选择 --</option>
    @{
        IDictionaryBusiness business = new EstateDictionaryBusiness();
        var dict = business.GetDict("RoomStatus");
        
        foreach(string item in dict)
        {
            <option value="@item" @(Model == item ? "selected='selected'" : "")>@item</option>
        }
    }  
</select>
