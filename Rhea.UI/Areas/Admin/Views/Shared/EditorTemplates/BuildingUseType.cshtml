@model int?

<select class="form-control" id="UseType" name="UseType">
    <option value="">-- 请选择 --</option>
    @foreach (BuildingUseType o in Enum.GetValues(typeof(BuildingUseType)))
    {
        <option value="@Convert.ToInt32(o)" @(Model == (int)o ? "selected='selected'" : "")>@o.DisplayName()</option>
    }
</select>