@model bool?
@{    
    SelectList list = ViewData.ModelMetadata.IsNullableValueType ?
        new SelectList(new[] {
            new SelectListItem { Text = "-- 请选择 --", Value = "" }, 
            new SelectListItem { Text = "有", Value = "true" },
            new SelectListItem { Text = "无", Value = "false" }   
            }, "Value", "Text", Model) :
        new SelectList(new[] {            
            new SelectListItem { Text = "有", Value = "true" },
            new SelectListItem { Text = "无", Value = "false" }
         }, "Value", "Text", Model);

    @Html.DropDownListFor(m => m, list)
}
