@using Rhea.Business.Estate
@using Rhea.Model.Estate
@model int?

<select id="BuildingId" name="BuildingId">
    <option value="">-- 请选择 --</option>
    @{
        IBuildingBusiness business = new MongoBuildingBusiness();
        var groups = business.GetList().OrderBy(r => r.Id);

        foreach (var item in groups)
        {
        <option value="@item.Id" @(Model == item.Id ? "selected='selected'" : "")>
            @item.Name
        </option>
        }
    }
</select>