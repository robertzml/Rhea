@model string
@using Rhea.Business

<select class="form-control" id="BuildType" name="BuildType">
    <option value="">-- 请选择 --</option>
    @{
        DictionaryBusiness business = new DictionaryBusiness();
        var dict = business.GetTextProperty("BuildType");

        foreach (string item in dict)
        {
            <option value="@item" @(Model == item ? "selected='selected'" : "")>@item</option>
        }
    }
</select>