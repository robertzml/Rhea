@model Rhea.Model.Estate.BuildingGroup

@{
    ViewBag.Title = "楼群信息";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="row">
    @Html.Action("Menu", "Estate")

    <div id="content" class="col-xs-12 col-sm-10 col-lg-10">
        <div class="row">
            <div id="breadcrumb" class="col-md-12">
                <ol class="breadcrumb">
                    <li><a href="@Url.Action("Index", "Estate")">房产管理</a></li>
                    <li><a href="#">建筑管理</a></li>
                    <li><a href="#">楼群信息</a></li>
                </ol>
            </div>
        </div>

        <div class="row">
            <div class="col-xs-12 col-lg-12">
                <div class="box">
                    <div class="box-header">
                        <div class="box-name">
                            <i class="fa fa-info-circle"></i>
                            <span>@ViewBag.Title</span>
                        </div>
                        <div class="box-icons">
                            <a class="collapse-link">
                                <i class="fa fa-chevron-up"></i>
                            </a>
                            <a class="expand-link">
                                <i class="fa fa-expand"></i>
                            </a>
                            <a class="close-link">
                                <i class="fa fa-times"></i>
                            </a>
                        </div>
                        <div class="no-move"></div>
                    </div>

                    <div class="box-content table-responsive">
                        <table class="table table-bordered table-striped table-hover" id="building-table">
                            <thead>
                                <tr>
                                    <th>属性</th>
                                    <th>值</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>
                                        @Html.DisplayNameFor(model => model.BuildingId)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(model => model.BuildingId)
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        @Html.DisplayNameFor(model => model.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(model => model.Name)
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        @Html.DisplayNameFor(model => model.ImageUrl)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(model => model.ImageUrl)
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        @Html.DisplayNameFor(model => model.PartMapUrl)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(model => model.PartMapUrl)
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        @Html.DisplayNameFor(model => model.CampusId)
                                    </td>
                                    <td>
                                        @Model.CampusName()
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        @Html.DisplayNameFor(model => model.OrganizeType)
                                    </td>
                                    <td>
                                        @{
                                            var type1 = (BuildingOrganizeType)Model.OrganizeType;
                                            @type1.DisplayName();
                                        }
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        @Html.DisplayNameFor(model => model.ParentId)
                                    </td>
                                    <td>
                                        @Model.ParentName()
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        @Html.DisplayNameFor(model => model.HasChild)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(model => model.HasChild)
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        @Html.DisplayNameFor(model => model.SubregionCount)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(model => model.SubregionCount)
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        @Html.DisplayNameFor(model => model.UseType)
                                    </td>
                                    <td>
                                        @{
                                            var type2 = (BuildingUseType)Model.UseType;
                                            @type2.DisplayName();
                                        }
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        @Html.DisplayNameFor(model => model.BuildArea)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(model => model.BuildArea)
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        @Html.DisplayNameFor(model => model.UsableArea)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(model => model.UsableArea)
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        @Html.DisplayNameFor(model => model.Floorage)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(model => model.Floorage)
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        @Html.DisplayNameFor(model => model.AreaCoeffcient)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(model => model.AreaCoeffcient)
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        @Html.DisplayNameFor(model => model.BuildType)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(model => model.BuildType)
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        @Html.DisplayNameFor(model => model.BuildStructure)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(model => model.BuildStructure)
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        @Html.DisplayNameFor(model => model.BuildCost)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(model => model.BuildCost)
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        @Html.DisplayNameFor(model => model.CurrentValue)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(model => model.CurrentValue)
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        @Html.DisplayNameFor(model => model.Classified)
                                    </td>
