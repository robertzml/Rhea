@model IEnumerable<Rhea.Model.Estate.Building>

@{
    ViewBag.Title = "楼宇列表";
    Layout = "~/Areas/Admin/Views/Shared/_Layout_Estate.cshtml";
}

<style type="text/css">
    .table td:last-child 
    {
        max-width: 300px;
    }
</style>

<div class="box">
    <div class="box-header well" data-original-title>
        <h2>
            <i class="icon-tasks"></i>@ViewBag.Title</h2>
    </div>

    <div class="box-content">
        <table id="building-list" class="table table-striped table-bordered bootstrap-datatable datatable">
            <thead>
                <tr>
                    <th>
                        ID
                    </th>
                    <th>
                        楼宇名称
                    </th>
                    <th>
                        建筑面积(m<sup>2</sup>)
                    </th>
                    <th>
                        使用面积(m<sup>2</sup>)
                    </th>
                    <th>
                        地上楼层
                    </th>
                    <th>
                        地下楼层
                    </th>
                    <th>
                        操作
                    </th>
                </tr>
            </thead>
            <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.BuildArea</td>
                    <td>@item.UsableArea</td>
                    <td>@item.AboveGroundFloor</td>
                    <td>@item.UnderGroundFloor</td>
                    <td>
                        <a class="btn btn-success btn-small" href="@Url.Action("Details", new { controller = "Building", id = item.Id, area = "Admin" })"><i class="icon-zoom-in icon-white"></i>查看</a> 
                        <a class="btn btn-warning btn-small" href="@Url.Action("Edit", new { controller = "Building", id = item.Id, area = "Admin" })"><i class="icon-edit icon-white"></i>编辑</a> 
                        <a class="btn btn-danger btn-small" href="@Url.Action("Delete", new { controller = "Building", id = item.Id, area = "Admin" })"><i class="icon-remove icon-white"></i>删除</a>
                        <a class="btn btn-info btn-small" href="@Url.Action("ListByBuilding", new { controller = "Room", buildingId = item.Id, area = "Admin" })"><i class="icon-th-large icon-white"></i>房间</a>
                    </td>
                </tr>
            }
            </tbody>
        </table>

        <p>
            <a class="btn btn-success" href="@Url.Action("List", new { controller = "Building", area = "Admin" })"><i class="icon-chevron-left icon-white"></i>所有楼宇</a> 
            <a class="btn btn-primary" href="@Url.Action("Create", new { controller = "Building", area = "Admin" })"><i class="icon-plus icon-white"></i>添加楼宇</a> 
        </p>
    </div>
</div>

<script type="text/javascript">
    $(function () {
        var dom = $('table#building-list');
        initDataTable(dom);

        var menu = $('a#building-manage');
        menuNavActive(menu);
    });
</script>
