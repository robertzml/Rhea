@model Rhea.UI.Areas.Admin.Models.SyncBuildingModel

@{
    ViewBag.Title = "同步建筑";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="row">
    @Html.Action("Menu", "Estate")

    <div id="content" class="col-xs-12 col-sm-10 col-lg-10">
        <div class="row">
            <div id="breadcrumb" class="col-md-12">
                <ol class="breadcrumb">
                    <li><a href="@Url.Action("Index", "Estate")">房产管理</a></li>
                    <li><a href="#">建筑管理</a></li>
                    <li><a href="@Url.Action("Sync", "Building")">同步建筑</a></li>
                </ol>
            </div>
        </div>

        <div class="row">
            <div class="col-xs-12 col-lg-12">
                <div class="box">
                    <div class="box-header">
                        <div class="box-name">
                            <i class="fa fa-plus-circle"></i>
                            <span>@ViewBag.Title</span>
                        </div>
                        <div class="box-icons">
                            <a class="collapse-link">
                                <i class="fa fa-chevron-up"></i>
                            </a>
                            <a class="expand-link">
                                <i class="fa fa-expand"></i>
                            </a>
                            <a class="close-link">
                                <i class="fa fa-times"></i>
                            </a>
                        </div>
                        <div class="no-move"></div>
                    </div>

                    <div class="box-content table-responsive">
                        @using (Html.BeginForm("SyncPost", "Building", FormMethod.Post, new { @class = "form-horizontal" }))
                        {
                            <fieldset>
                                <legend>同步建筑</legend>

                                <div class="form-group">
                                    <label class="col-lg-3 control-label">原始楼群</label>
                                    <div class="col-lg-5">
                                        <select class="form-control" name="oldBuildingId" id="oldBuildingId">
                                            <option value="">-- 选择楼群 --</option>
                                            @foreach (var item in Model.BuildingGroups)
                                            {
                                                <option value="@item.Key">@item.Value</option>
                                            }
                                        </select>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="col-sm-3 control-label">新建筑ID</label>
                                    <div class="col-sm-5">
                                        <input type="number" class="form-control" name="newBuildingId" />
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="col-sm-3 control-label">新建筑类别</label>
                                    <div class="col-sm-5">
                                        <input type="number" class="form-control" name="organizeType" />
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="col-sm-3 control-label">是否有子建筑</label>
                                    <div class="col-sm-5">
                                        <input type="checkbox" class="form-control" name="hasChild" value="has" />
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="col-sm-3 control-label">排序</label>
                                    <div class="col-sm-5">
                                        <input type="number" class="form-control" name="sort" />
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="col-lg-9 col-lg-offset-3">
                                        <button type="submit" class="btn btn-primary">同步</button>
                                    </div>
                                </div>

                            </fieldset>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script type="text/javascript">
        $(function () {
            topNavActive($('#estate-nav'));
            leftNavActive($('#building-sync-menu'));
        });
    </script>
}