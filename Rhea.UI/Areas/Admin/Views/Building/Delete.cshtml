@model Rhea.Model.Estate.Building
@using Rhea.Common;

@{
    ViewBag.Title = "楼宇删除";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<div class="box">
    <div class="box-header well" data-original-title>
        <h2>
            <i class="icon-th-list"></i>楼宇信息</h2>
    </div>

    <div class="box-content">
        <div class="page-header">
            <h2>
                确认是否删除该信息?</h2>
        </div>

        <div class="row-fluid">
            <div class="span12">
                <fieldset>
                    <table class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th style="width: 20%">
                                    属性
                                </th>
                                <th style="width: 80%">
                                    值
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>
                                    @Html.DisplayNameFor(model => model.Id)
                                </td>
                                <td>
                                    @Model.Id
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    @Html.DisplayNameFor(model => model.Name)
                                </td>
                                <td>
                                    @Model.Name
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    @Html.DisplayNameFor(model => model.BuildArea)
                                </td>
                                <td>
                                    @Model.BuildArea
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    @Html.DisplayNameFor(model => model.UsableArea)
                                </td>
                                <td>
                                    @Model.UsableArea
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    @Html.DisplayNameFor(model => model.AboveGroundFloor)
                                </td>
                                <td>
                                    @Model.AboveGroundFloor
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    @Html.DisplayNameFor(model => model.UnderGroundFloor)
                                </td>
                                <td>
                                    @Model.UnderGroundFloor
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    @Html.DisplayNameFor(model => model.UseType)
                                </td>
                                <td>
                                @{
                                    var type = (BuildingUseType)Model.UseType;
                                    @type.DisplayName(); 
                                }
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    @Html.DisplayNameFor(model => model.Remark)
                                </td>
                                <td>
                                    @Model.Remark
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </fieldset>

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(model => model.Id)
                    <div class="form-actions">
                        <button type="submit" class="btn btn-danger">删除</button>
                        <a class="btn" href="@Url.Action("Details", new { controller = "Building", id = Model.Id, area = "Admin" })">取消</a> 
                        <a class="btn" href="@Url.Action("List", new { controller = "Building", buildingGroupId = Model.BuildingGroupId, area = "Admin" })">回到列表</a>                     
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    $(function () {
        var menu = $('a#building-manage');
        menuNavActive(menu);
    });
</script>