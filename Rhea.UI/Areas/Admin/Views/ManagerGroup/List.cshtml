@model IEnumerable<Rhea.Model.Account.ManagerGroup>

@{
    ViewBag.Title = "管理组列表";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="box">
    <div class="box-header well" data-original-title>
        <h2><i class="icon-th-list"></i>@ViewBag.Title</h2>    
    </div>

    <div class="box-content">
        <div class="row-fluid">
            <div class="span12">
                <table id="department-list" class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Id)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Title)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Rank)
                            </th>
                            <th>
                                操作
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.Name</td>
                            <td>@item.Title</td>
                            <td>@item.Rank</td>
                            <td>
                                <a class="btn btn-success btn-small" href="@Url.Action("Details", new { controller = "ManagerGroup", id = item.Id, area = "Admin" })"><i class="icon-zoom-in icon-white"></i>查看</a>
                                <a class="btn btn-warning btn-small" href="@Url.Action("Edit", new { controller = "ManagerGroup", id = item.Id, area = "Admin" })"><i class="icon-edit icon-white"></i>编辑</a> 
                                <a class="btn btn-danger btn-small" href="@Url.Action("Delete", new { controller = "ManagerGroup", id = item.Id, area = "Admin" })"><i class="icon-remove icon-white"></i>删除</a>
                                <a class="btn btn-info btn-small" href="@Url.Action("UserList", new { controller = "ManagerGroup", buildingId = item.Id, area = "Admin" })"><i class="icon-th-large icon-white"></i>用户</a>
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    $(function () {
        var menu = $('a#manager-group-manage');
        menuNavActive(menu);
    });
</script>
