@model Rhea.Model.Account.ManagerGroup

@{
    ViewBag.Title = "管理组信息";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="box">
    <div class="box-header well" data-original-title>
        <h2><i class="icon-tasks"></i>@ViewBag.Title</h2>    
    </div>

    <div class="box-content">    
        <div class="page-header">
            <h2>
                @Model.Name <small>Id: @Model.Id</small></h2>
        </div>

        <div class="row-fluid">
            <div class="span12">
                <table class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>
                                属性
                            </th>
                            <th>
                                值
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>
                                @Html.DisplayNameFor(model => model.Id)
                            </td>
                            <td>
                                @Model.Id
                            </td>
                        </tr>
                        <tr>
                            <td>
                                @Html.DisplayNameFor(model => model.Name)
                            </td>
                            <td>
                                @Model.Name
                            </td>
                        </tr>
                        <tr>
                            <td>
                                @Html.DisplayNameFor(model => model.Title)
                            </td>
                            <td>
                                @Model.Title
                            </td>
                        </tr>
                        <tr>
                            <td>
                                @Html.DisplayNameFor(model => model.Rank)
                            </td>
                            <td>
                                @Model.Rank
                            </td>
                        </tr>                        
                    </tbody>
                </table>
            </div>
        </div>

        <p>
            <a class="btn btn-success" href="@Url.Action("List", new { controller = "ManagerGroup", area = "Admin" })"><i class="icon-list icon-white"></i> 回到列表</a> 
            <a class="btn btn-warning" href="@Url.Action("Edit", new { controller = "ManagerGroup", id = Model.Id, area = "Admin" })"><i class="icon-edit icon-white"></i> 编辑</a> 
            <a class="btn btn-danger" href="@Url.Action("Delete", new { controller = "ManagerGroup", id = Model.Id, area = "Admin" })"><i class="icon-remove icon-white"></i> 删除</a>
            <a class="btn btn-info" href="@Url.Action("ListByBuilding", new { controller = "ManagerGroup", buildingId = Model.Id, area = "Admin" })"><i class="icon-th-large icon-white"></i> 用户</a>
        </p>

    </div>
</div>

<script type="text/javascript">
    $(function () {
        var menu = $('a#manager-group-manage');
        menuNavActive(menu);
    });
</script>