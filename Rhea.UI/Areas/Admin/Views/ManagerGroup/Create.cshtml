@model Rhea.Model.Account.ManagerGroup

@{
    ViewBag.Title = "管理组添加";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<div class="box">
    <div class="box-header well" data-original-title>
        <h2>
            <i class="icon-th-list"></i>管理组信息</h2>
    </div>

    <div class="box-content">
        <div class="row-fluid">
            <div class="span12">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)
                <fieldset>
                    <legend>@ViewBag.Title</legend>                
            
                    <table class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th style="width: 20%">
                                    属性
                                </th>
                                <th style="width: 80%">
                                    值
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>
                                    @Html.DisplayNameFor(model => model.Id)
                                </td>
                                <td>
                                    @Html.EditorFor(model => model.Id)
                                    @Html.ValidationMessageFor(model => model.Id)
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    @Html.DisplayNameFor(model => model.Name)
                                </td>
                                <td>
                                    @Html.EditorFor(model => model.Name)
                                    @Html.ValidationMessageFor(model => model.Name)
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    @Html.DisplayNameFor(model => model.Title)
                                </td>
                                <td>
                                    @Html.EditorFor(model => model.Title)
                                    @Html.ValidationMessageFor(model => model.Title)
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    @Html.DisplayNameFor(model => model.Rank)
                                </td>
                                <td>
                                    @Html.EditorFor(model => model.Rank)
                                    @Html.ValidationMessageFor(model => model.Rank)
                                </td>
                            </tr>                            
                            <tr>
                                <td>
                                    @Html.DisplayNameFor(model => model.Remark)
                                </td>
                                <td>
                                    @Html.EditorFor(model => model.Remark)
                                    @Html.ValidationMessageFor(model => model.Remark)
                                </td>
                            </tr>
                        </tbody>
                    </table>
            
                    <div class="form-actions">
                        <button type="submit" class="btn btn-primary">保存</button>                       
                        <a class="btn" href="@Url.Action("List", new { controller = "ManagerGroup", area = "Admin" })">回到列表</a> 
                    </div>
                </fieldset>
            }
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    $(function () {
        var menu = $('a#manager-group-manage');
        menuNavActive(menu);
    });
</script>
