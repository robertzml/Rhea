@model IEnumerable<Rhea.Model.Estate.Campus>

@{
    ViewBag.Title = "校区列表";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="row">
    @Html.Action("Menu", "Estate")

    <!--Start Content-->
    <div id="content" class="col-xs-12 col-sm-10 col-lg-10">

        <div class="row">
            <div id="breadcrumb" class="col-md-12">
                <ol class="breadcrumb">
                    <li><a href="@Url.Action("Index", "Estate")">房产管理</a></li>
                    <li><a href="#">校区管理</a></li>
                    <li><a href="@Url.Action("List", "Campus")">校区列表</a></li>
                </ol>
            </div>
        </div>

        <div class="row">
            <div class="col-xs-12 col-lg-12">
                <div class="box">
                    <div class="box-header">
                        <div class="box-name">
                            <i class="fa fa-table"></i>
                            <span>@ViewBag.Title</span>
                        </div>
                        <div class="box-icons">
                            <a class="collapse-link">
                                <i class="fa fa-chevron-up"></i>
                            </a>
                            <a class="expand-link">
                                <i class="fa fa-expand"></i>
                            </a>
                            <a class="close-link">
                                <i class="fa fa-times"></i>
                            </a>
                        </div>
                        <div class="no-move"></div>
                    </div>

                    <div class="box-content table-responsive">
                        <table class="table table-bordered table-striped table-hover table-heading table-datatable" id="campus-table">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>名称</th>
                                    <th>图片</th>
                                    <th>备注</th>
                                    <th>操作</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.CampusId</td>
                                        <td>@item.Name</td>
                                        <td>@item.ImageUrl</td>
                                        <td>@item.Remark</td>
                                        <td>
                                            <a href="@Url.Action("Details", new { controller = "Campus", id = item.CampusId })" class="btn btn-info btn-sm" role="button"><i class="fa fa-check-circle"></i>&nbsp;查看</a>
                                            <a href="@Url.Action("Edit", new { controller = "Campus", id = item.CampusId })" class="btn btn-warning btn-sm" role="button"><i class="fa fa-edit"></i>&nbsp;编辑</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>

                        <hr />
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--End Content-->
</div>

@section scripts {
    <script type="text/javascript">
        $(function () {
            topNavActive($('#estate-nav'));
            leftNavActive($('#campus-list-menu'));

            initDatatable($('#campus-table'));
        });
    </script>
}