@model IEnumerable<Rhea.Model.Estate.Campus>

@{
    ViewBag.Title = "校区列表";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-2 col-md-2">
        @Html.Action("Menu", "Estate")
    </div>

    <div class="col-lg-10 col-md-10">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">@ViewBag.Title</h3>
            </div>
            <div class="panel-body">
                <table id="campus-list" class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.ImageUrl)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Remark)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Status)
                            </th>
                            <th>
                                编辑
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ImageUrl)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Remark)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Status)
                                </td>
                                <td>
                                    <a class="btn btn-success btn-sm" href="@Url.Action("Details", new { controller = "Campus", id = item.CampusId })"><span class="glyphicon glyphicon-zoom-in"></span> 查看</a>
                                    <a class="btn btn-warning btn-sm" href="@Url.Action("Edit", new { controller = "Campus", id = item.CampusId, area = "Admin" })"><span class="glyphicon glyphicon-edit"></span> 编辑</a>
                                    <a class="btn btn-danger btn-sm" href="@Url.Action("Delete", new { controller = "Campus", id = item.CampusId, area = "Admin" })"><span class="glyphicon glyphicon-remove"></span> 删除</a>
                                    <a class="btn btn-info btn-sm" href="@Url.Action("List", new { controller = "Building", buildingGroupId = item.CampusId, area = "Admin" })"><span class="glyphicon glyphicon-chevron-right"></span> 楼宇</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        
    </div>
</div>

@section scripts {
    <script type="text/javascript">
        $(function () {
            var dom = $('table#campus-list');
            var oTable = initDataTable(dom);

            menuNavActive($('a#campus-manage'));
        })
    </script>
}