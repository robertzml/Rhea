@{
    ViewBag.Title = "楼群列表";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="box">
    <div class="box-header well" data-original-title>
        <h2>
            <i class="icon-tasks"></i>@ViewBag.Title</h2>
    </div>

    <div class="box-content">
        <table id="building-group-list" class="table table-striped table-bordered bootstrap-datatable datatable">
            <thead>
                <tr>
                    <th>
                        楼群名称
                    </th>
                    <th>
                        楼宇栋数
                    </th>
                    <th>
                        建筑面积 (m<sup>2</sup>)
                    </th>
                    <th>
                        使用面积 (m<sup>2</sup>)
                    </th>
                    <th>
                        操作
                    </th>
                </tr>
            </thead>
            <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.BuildingCount</td>
                    <td>@item.BuildArea</td>
                    <td>@item.UsableArea</td>
                    <td>
                        <a class="btn btn-success btn-small" href="@Url.Action("List", new { controller = "Building", buildingGroupId = item.Id, area = "Admin" })"><i class="icon-chevron-right icon-white"></i>楼宇</a>
                        <a class="btn btn-success btn-small" href="@Url.Action("Details", new { controller = "BuildingGroup", id = item.Id, area = "Admin" })"><i class="icon-zoom-in icon-white"></i>查看</a> 
                        <a class="btn btn-warning btn-small" href="@Url.Action("Edit", new { controller = "BuildingGroup", id = item.Id, area = "Admin" })"><i class="icon-edit icon-white"></i>编辑</a> 
                        <a class="btn btn-danger btn-small" href="@Url.Action("Delete", new { controller = "BuildingGroup", id = item.Id, area = "Admin" })"><i class="icon-remove icon-white"></i>删除</a>
                    </td>
                </tr>
            }
            </tbody>
        </table>

        <p>
            <a class="btn btn-primary" href="@Url.Action("Create", new { controller = "BuildingGroup", area = "Admin" })"><i class="icon-plus icon-white"></i>添加楼群</a> 
        </p>
    </div>
</div>

<script type="text/javascript">
    $(function () {
        var dom = $('table#building-group-list');
        initDataTable(dom);

        var menu = $('a#building-group-manage');
        menuNavActive(menu);
    });
</script>