@{
    ViewBag.Title = "系统管理";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section breadcrumb {
    <li>@Html.ActionLink("系统管理", "Index", new { controller = "Admin", area = "Estate" })</li>
}

<div class="row-fluid sortable">
    <div class="span9">
        <div id="ajax-content1">
            <div class="box">
                <div class="box-header well" data-original-title>
                    <h2>
                        <i class="icon-align-justify"></i>概要</h2>
                </div>
                <div class="box-content">
                    <div class="row-fluid">
                        <div class="span7">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="span3">
        <div class="box">
            <div class="box-header well" data-original-title>
                <h3>
                    用户组管理</h3>
                <div class="box-icon">
                    <a href="#" class="btn btn-minimize btn-round"><i class="icon-chevron-up"></i></a>
                    <a href="#" class="btn btn-close btn-round"><i class="icon-remove"></i></a>
                </div>
            </div>
            <div class="box-content">
                <ul id="admin-nav" class="nav nav-list">
                    <li class="nav-header">用户组</li>
                    <li><a id="manager-group" href="#"><span>管理组</span></a></li>
                    <li><a id="user-group" href="#"><span>用户组</span></a></li>
                    <li class="nav-header">用户</li>
                    <li><a id="manager-list" href="#"><span>管理员列表</span></a></li>
                    <li><a id="user-list" href="#"><span>用户列表</span></a></li>
                </ul>
            </div>
        </div>
    </div>
</div>


@section scripts {
    <script type="text/javascript">
        $(document).ready(function () {
            $('a#manager-group').click(function () {
                $('ul#admin-nav > li').removeClass('active');
                $(this).parent().addClass('active');
                ajaxLoadPage("ManagerGroupList", "Admin", "Estate", {});
            });
        });
    </script>
}
