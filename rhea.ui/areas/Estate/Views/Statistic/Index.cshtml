@{
    ViewBag.Title = "房产统计";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section breadcrumb {
    <li>@Html.ActionLink("房产统计", "Index", new { controller = "Statistic", area = "Estate" })</li>
}

<div class="row-fluid sortable">
    <div class="span9">
        <div id="ajax-loader" style="display: none;">
            <img src="/img/ajax-loaders/ajax-loader-7.gif" alt="loading..." title="loading..." />
        </div>

        <div id="ajax-content1">               
            <div class="box">
                <div class="box-header well" data-original-title>
                    <h2>
                        <i class="icon-align-justify"></i>总数据</h2>
                </div>
                <div class="box-content">
                    <div class="row-fluid">
                        <div class="span7">
                        <p>
                            楼群数量：@ViewBag.BuildingGroupCount
                        </p>
                        <p>
                            房间数量：@ViewBag.RoomCount
                        </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="span3">        
        <div class="box">
            <div class="box-header well" data-original-title>
                <h3>
                    统计类别</h3>
                <div class="box-icon">
                    <a href="#" class="btn btn-minimize btn-round"><i class="icon-chevron-up"></i></a>
                    <a href="#" class="btn btn-close btn-round"><i class="icon-remove"></i></a>
                </div>
            </div>
            <div class="box-content">
                <ul id="category-list" class="nav nav-list">
                    <li><a id="college-room-statistic" href="#"><span>学院分类用房统计</span></a></li>
                    <li><a id="college-room-compare" href="#"><span>学院分类用房比较</span></a></li>
                    <li><a id="college-building-room" href="#"><span>学院楼宇用房统计</span></a></li>
                </ul>
            </div>
        </div>
    </div>
</div>
<!--/row-->

@section scripts {
    <script src="@Url.Content("~/Scripts/highcharts.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/modules/exporting.js")" type="text/javascript"></script>

    <script type="text/javascript">
        $(document).ready(function () {
           
            $('a#college-room-statistic').click(function () {
                $('ul#category-list > li').removeClass('active');
                $(this).parent().addClass('active');
                ajaxLoadPage("CollegeRoomStatistic", "Statistic", "Estate", {});
                return false;
            });

            $('a#college-room-compare').click(function () {
                $('ul#category-list > li').removeClass('active');
                $(this).parent().addClass('active');
                ajaxLoadPage("CollegeRoomCompare", "Statistic", "Estate", {});
                return false;
            });

            $('a#college-building-room').click(function () {
                $('ul#category-list > li').removeClass('active');
                $(this).parent().addClass('active');
                ajaxLoadPage("CollegeBuildingRoom", "Statistic", "Estate", {});
                return false;
            });
        });
    </script>
}