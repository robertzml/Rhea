@{
    Layout = null;
    ViewBag.Title = "学院分类用房统计";
}

<div class="box">
    <div class="box-header well" data-original-title>
        <h2>
            <i class="icon-align-left"></i>@ViewBag.Title</h2>
    </div>

    <div class="box-content">
        <div class="row-fluid">
            <div class="span12">
                <span>选择：</span>
                <select id="college-list">
                </select>
                <select id="classify-list">
                    <option value="0">全部</option>
                    <option value="1">办公分类</option>
                    <option value="2">教学分类</option>
                    <option value="3">实验分类</option>
                    <option value="4">科研分类</option>
                </select>
            </div>
        </div>

        <div class="row-fluid">
            <div class="span12">
                <div id="container1" style="width: 99%">
                </div>
            </div>
        </div>

        <div class="row-fluid">
            <div class="span12">
                <div id="container2" style="width: 99%">
                </div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">

    $(document).ready(function () {

        var dataList;

        $.getJSON('/Statistic/CollegeClassifyData', function (response) {
            dataList = response;
            initSelectList(response);
        });

        function initSelectList(data) {
            $.each(data, function (i, item) {
                $('#college-list').append("<option value='" + item.Id + "'>" + item.CollegeName + "</option>");               
            });
            setPieChart(data[0], 0);
            setColumnChart(data[0], 0);
        }

        $('#college-list').change(function () {
            var id = $(this).val();
            for (var i = 0; i < dataList.length; i++) {
                if (dataList[i].Id == id) {
                    setPieChart(dataList[i], 0);
                    setColumnChart(dataList[i], 0);
                    break;
                }
            }
            $('#classify-list').get(0).selectedIndex = 0;
        });

        $('#classify-list').change(function () {
            var id = $('#college-list').val();
            var cl = $(this).val();
            for (var i = 0; i < dataList.length; i++) {
                if (dataList[i].Id == id) {
                    setPieChart(dataList[i], cl);
                    setColumnChart(dataList[i], cl);
                    break;
                }
            }
        });

        function pushData(option, data) {
            $.each(data, function (i, item) {
                option.series[0].data.push([item.FunctionProperty, parseFloat(item.Area)]);
            });
        }

        function pushData2(option, data) {
            $.each(data, function (i, item) {
                option.series[0].data.push([item.FunctionProperty, parseFloat(item.Area)]);
                option.xAxis.categories.push(item.FunctionProperty);
            });
        }

        function setPieChart(data, type) {
            var option = {
                chart: {
                    renderTo: 'container1',
                    plotBackgroundColor: null,
                    plotBorderWidth: null,
                    plotShadow: false
                },
                credits: {
                    enabled: false
                },
                title: {
                    text: '分类用房比例图'
                },
                tooltip: {
                    pointFormat: '面积: <b>{point.y}m<sup>2</sup></b>',
                    percentageDecimals: 1
                },            
                plotOptions: {
                    pie: {
                        allowPointSelect: true,
                        cursor: 'pointer',
                        dataLabels: {
                            enabled: true,
                            color: '#000000',
                            connectorColor: '#000000',
                            formatter: function () {
                                return '<b>' + this.point.name + '</b>: ' + this.percentage.toFixed(2) + ' %';
                            }
                        }
                    }
                },
                series: [{
                    type: 'pie',
                    name: '比例',
                    data: []
                }]
            };

            switch (type) {
                case "1":
                    pushData(option, data.OfficeDetailArea);
                    break;
                case "2":
                    pushData(option, data.EducationDetailArea);
                    break;
                case "3":
                    pushData(option, data.ExperimentDetailArea);
                    break;
                case "4":
                    pushData(option, data.ResearchDetailArea);
                    break;
                default:
                    option.series[0].data.push(['办公用房', parseFloat(data.OfficeArea)]);
                    option.series[0].data.push(['教学用房', parseFloat(data.EducationArea)]);
                    option.series[0].data.push(['实验用房', parseFloat(data.ExperimentArea)]);
                    option.series[0].data.push(['科研用房', parseFloat(data.ResearchArea)]);
                    break;
            }

            var chart1 = new Highcharts.Chart(option);
        }

        function setColumnChart(data, type) {
            var option = {
                chart: {
                    renderTo: 'container2',
                    type: 'column'
                },
                credits: {
                    enabled: false
                },
                title: {
                    text: '分类用房面积图'
                },
                xAxis: {
                    categories: []
                },
                yAxis: {
                    min: 0,
                    title: {
                        text: '面积 (m2)'
                    }
                },
                tooltip: {
                    formatter: function () {
                        return '' + this.x + ': ' + this.y + ' m2';
                    }
                },
                plotOptions: {
                    column: {
                        pointPadding: 0.2,
                        borderWidth: 0
                    }
                },
                series: [{
                    name: "面积",
                    data: []
                }]
            };

            switch (type) {
                case "1":
                    pushData2(option, data.OfficeDetailArea);
                    break;
                case "2":
                    pushData2(option, data.EducationDetailArea);
                    break;
                case "3":
                    pushData2(option, data.ExperimentDetailArea);
                    break;
                case "4":
                    pushData2(option, data.ResearchDetailArea);
                    break;
                default:
                    option.series[0].data.push(['办公用房', parseFloat(data.OfficeArea)]);
                    option.series[0].data.push(['教学用房', parseFloat(data.EducationArea)]);
                    option.series[0].data.push(['实验用房', parseFloat(data.ExperimentArea)]);
                    option.series[0].data.push(['科研用房', parseFloat(data.ResearchArea)]);
                    option.xAxis.categories = ['办公用房', '教学用房', '实验用房', '科研用房'];
                    break;
            }

            var chart2 = new Highcharts.Chart(option);
        }
    });

</script>