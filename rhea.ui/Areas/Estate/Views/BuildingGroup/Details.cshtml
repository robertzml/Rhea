@model Rhea.Data.Entities.BuildingGroup
@{
    Layout = null; 
}

<div class="box">
<div class="box-header well" data-original-title>
    <h2><i class="icon-th-list"></i>楼群信息</h2>
</div>

<div class="box-content">
    <div class="page-header">
        <h1>
            @Model.Name <small>Id: @Model.Id</small></h1>
    </div>
    <div class="row-fluid ">
        <div class="span7">
            <h3>
                介绍</h3>
            <p>@Model.Remark</p>
            <p>
                Vivamus sagittis lacus vel augue laoreet rutrum faucibus dolor auctor. Duis mollis,
                est non commodo luctus, nisi erat porttitor ligula, eget lacinia odio sem nec elit.
                Donec sed odio dui.</p>
        </div>
        <div class="span5">
            <div class="well">
                <a id="main-pic" title="@Model.Name" href="@Model.ImageUrl"><img src="@Model.ImageUrl" alt="图片"></a>                
            </div>
        </div>
    </div>
    <!--/row -->
    <div class="row-fluid">
        <div class="span12">
            <h3>详细参数</h3>
            <div class="row-fluid">
                <div class="span6">
                    <table class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>
                                    属性
                                </th>
                                <th>
                                    值
                                </th>                                
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>
                                    @Html.DisplayNameFor(model => model.Name)
                                </td>
                                <td>
                                    @Model.Name
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    @Html.DisplayNameFor(model => model.BuildingCount)
                                </td>
                                <td>
                                    @Model.BuildingCount
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    @Html.DisplayNameFor(model => model.AreaCoeffcient)
                                </td>
                                <td>
                                    @Model.AreaCoeffcient
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    @Html.DisplayNameFor(model => model.BuildArea)
                                </td>
                                <td>
                                    @Model.BuildArea
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    @Html.DisplayNameFor(model => model.UsableArea)
                                </td>
                                <td>
                                    @Model.UsableArea
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    @Html.DisplayNameFor(model => model.Floorage)
                                </td>
                                <td>
                                    @Model.Floorage
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    @Html.DisplayNameFor(model => model.BuildType)
                                </td>
                                <td>
                                    @Model.BuildType
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    @Html.DisplayNameFor(model => model.BuildStructure)
                                </td>
                                <td>
                                    @Model.BuildStructure
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    @Html.DisplayNameFor(model => model.BuildCost)
                                </td>
                                <td>
                                    @Model.BuildCost
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <div class="span6">
                    <table class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>
                                    属性
                                </th>
                                <th>
                                    值
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>
                                    @Html.DisplayNameFor(model => model.CurrentValue)
                                </td>
                                <td>
                                    @Model.CurrentValue
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    @Html.DisplayNameFor(model => model.Classified)
                                </td>
                                <td>
                                    @Model.Classified
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    @Html.DisplayNameFor(model => model.FundsSubject)
                                </td>
                                <td>
                                    @Model.FundsSubject
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    @Html.DisplayNameFor(model => model.EquityNumber)
                                </td>
                                <td>
                                    @Model.EquityNumber
                            </tr>
                            <tr>
                                <td>
                                    @Html.DisplayNameFor(model => model.BuildDate)
                                </td>
                                <td>
                                @if (Model.BuildDate != null)
                                {                                    
                                    @Convert.ToDateTime(Model.BuildDate).ToShortDateString();
                                }                                
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    @Html.DisplayNameFor(model => model.FixedYear)
                                </td>
                                <td>
                                    @Model.FixedYear
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    @Html.DisplayNameFor(model => model.DesignCompany)
                                </td>
                                <td>
                                    @Model.DesignCompany
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    @Html.DisplayNameFor(model => model.ConstructCompany)
                                </td>
                                <td>
                                    @Model.ConstructCompany
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    @Html.DisplayNameFor(model => model.ManageType)
                                </td>
                                <td>
                                    @Model.ManageType
                                </td>
                            </tr>
                        </tbody>
                    </table>  
                </div>
            </div>
        </div>
    </div>
    <div class="row-fluid">
        <div class="span12">
            <h3>
                楼宇列表</h3>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>
                            名称
                        </th>
                        <th>
                            建筑面积
                        </th>
                        <th>
                            地上楼层数
                        </th>
                        <th>
                            地下楼层数
                        </th>
                        <th>
                            详细
                        </th>
                    </tr>
                </thead>
                <tbody>
                @foreach (var item in Model.Buildings)
                {
                    <tr>
                        <td>
                            @item.Name
                        </td>
                        <td class="center">
                            @item.BuildArea
                        </td>
                        <td class="center">
                            @item.AboveGroundFloor
                        </td>
                        <td class="center">
                            @item.UnderGroundFloor
                        </td>
                        <td>
                            <a class="btn btn-success building-details" href="#" ref="@item.Id">
                                <i class="icon-zoom-in icon-white"></i>详细
                            </a>
                        </td>
                    </tr>
                }                    
                </tbody>
            </table>
        </div>       
    </div>
    <div class="row-fluid">
        <div class="span12">
            <h2>操作</h2>     
            <p>    
                <a class="btn" id="edit" href="#"><i class="icon-edit"></i>编辑</a> 
                <a class="btn" id="delete" href="#"><i class="icon-remove"></i>删除</a>
            </p>
        </div>
    </div>
</div>
</div>

<script type="text/javascript">
    $('#ajax-content1').ready(function () {

        $('a#main-pic').colorbox({ transition: "elastic", maxWidth: "95%", maxHeight: "95%" });

        $('a#edit').click(function () {
            var request = { id: '@Model.Id' };
            ajaxLoadPage("Edit", "BuildingGroup", "Estate", request);
            return false;
        });

        $('a#delete').click(function () {
            var request = { id: '@Model.Id' };
            ajaxLoadPage("Delete", "BuildingGroup", "Estate", request);
            return false;
        });

        $('a.building-details').click(function () {
            var request = { id: $(this).attr('ref') };
            ajaxLoadPage("Details", "Building", "Estate", request);
            return false;
        });
    });
</script>